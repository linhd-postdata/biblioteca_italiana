[
    {
        "author": "Branca Brancacci",
        "work": "Poesie",
        "title": "I",
        "structure": "sonetto",
        "url": "http://www.bibliotecaitaliana.it/testo/bibit000207",
        "text": [
            [
                {
                    "verse": "O voi ch'entrate dentro a questo chiostro,"
                },
                {
                    "verse": "se' luoghi e gli abitanti guarderete,"
                },
                {
                    "verse": "cogli occhi della mente voi vedrete"
                },
                {
                    "verse": "ch'alcun dolor non \u00e8 simile al nostro."
                }
            ],
            [
                {
                    "verse": "Noi di calamit\u00e0 siamo ampio mostro,"
                },
                {
                    "verse": "disposti al freddo al caldo a fame a sete,"
                },
                {
                    "verse": "e liberi gi\u00e0 fummo com voi s\u00e8te,"
                },
                {
                    "verse": "n\u00e9 gi\u00e0 ci pesa dello stato vostro."
                }
            ],
            [
                {
                    "verse": "Ma ben preghiam che 'n voi piat\u00e0 s'accenda"
                },
                {
                    "verse": "di porger prieghi al sommo Creatore,"
                },
                {
                    "verse": "che grata libert\u00e0 presto ci renda;"
                }
            ],
            [
                {
                    "verse": "e per caritativo e dolce amore,"
                },
                {
                    "verse": "la man piatosa ognun di voi distenda"
                },
                {
                    "verse": "a porgerci di borsa alcun favore."
                }
            ],
            [
                {
                    "verse": "Ch\u00e9 Cristo redentore"
                },
                {
                    "verse": "a cento doppi poi merito rende"
                },
                {
                    "verse": "a chi del suo ne' carcerati spende."
                }
            ]
        ]
    }
]