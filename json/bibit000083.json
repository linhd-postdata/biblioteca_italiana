[
    {
        "author": "Giovanni Martini",
        "work": "Poesie",
        "title": "I",
        "structure": "serventese",
        "url": "http://www.bibliotecaitaliana.it/testo/bibit000083",
        "text": [
            [
                {
                    "verse": "L'alta virt\u00f9 di quel collegio santo"
                },
                {
                    "verse": "ch'adorna di Parnaso il sacro monte"
                },
                {
                    "verse": "con quella illustra fonte,"
                },
                {
                    "verse": "che fa versificando a molti onore,"
                }
            ],
            [
                {
                    "verse": "spiri per grazia in me tanto valore"
                },
                {
                    "verse": "ch'io possa con be' versi dire in rima"
                },
                {
                    "verse": "la gran bellezza in prima"
                },
                {
                    "verse": "e poi l'alta virt\u00f9 di quella, a ch'io"
                }
            ],
            [
                {
                    "verse": "per servo mi son dato, e nel cor mio"
                },
                {
                    "verse": "non tengo altro disio, se non far cosa"
                },
                {
                    "verse": "che a lei sia dilettosa,"
                },
                {
                    "verse": "ch'io son pi\u00f9 suo ch'io non son di me stesso."
                }
            ],
            [
                {
                    "verse": "Io, per trattar di lei come ho promesso,"
                },
                {
                    "verse": "comincer\u00f2 a' suoi crespi capelli,"
                },
                {
                    "verse": "puliti s\u00ec che a quelli"
                },
                {
                    "verse": "d'Apollo hanno la fama e 'l nome tolto;"
                }
            ],
            [
                {
                    "verse": "e nella sommit\u00e0 del suo bel volto,"
                },
                {
                    "verse": "che fa ciascuno isguardo innamorare,"
                },
                {
                    "verse": "vedesi a punto istare"
                },
                {
                    "verse": "alta lucente e spaz\u00efosa testa."
                }
            ],
            [
                {
                    "verse": "Iscorgesi pi\u00f9 giuso a pi\u00e8 di questa"
                },
                {
                    "verse": "nere, sottili due arcate ciglia;"
                },
                {
                    "verse": "e pien di maraviglia"
                },
                {
                    "verse": "riman ciascun che guarda i suoi belli occhi,"
                }
            ],
            [
                {
                    "verse": "per\u00f2 che vi par drento Amor che iscocchi"
                },
                {
                    "verse": "saette d'oro e punga altrui con elle,"
                },
                {
                    "verse": "e le sue guance belle"
                },
                {
                    "verse": "rispondon tanto quanto vuol ragione."
                }
            ],
            [
                {
                    "verse": "Il naso ha tanta bella faz\u00efone"
                },
                {
                    "verse": "che fa innamorar giovani e vecchi,"
                },
                {
                    "verse": "puliti e par gli orecchi,"
                },
                {
                    "verse": "pigliando ognun la parte che gli tocca."
                }
            ],
            [
                {
                    "verse": "Deh, quanto a me ella ha pi\u00f9 bella bocca"
                },
                {
                    "verse": "che di Lavinia non scrisse Vergilio,"
                },
                {
                    "verse": "fregiata di vermilio"
                },
                {
                    "verse": "co' labbri rilucenti, e, quando ride,"
                }
            ],
            [
                {
                    "verse": "deh, quanto l'un da l'altro si divide,"
                },
                {
                    "verse": "s\u00ec che dimostra suo piccoli denti,"
                },
                {
                    "verse": "bianchi e rilucenti,"
                },
                {
                    "verse": "che l'uno allato all'altro \u00e8 ben commesso!"
                }
            ],
            [
                {
                    "verse": "Il mento ha tondo, piano e un poco fesso,"
                },
                {
                    "verse": "e tanto ben rispondon queste cose"
                },
                {
                    "verse": "che quel che ve le pose"
                },
                {
                    "verse": "debbe per certo ben saper[e] l'arte."
                }
            ],
            [
                {
                    "verse": "Deh, quanto bene egli \u00e8 a parte a parte"
                },
                {
                    "verse": "fatto quel viso, al qual n\u00efente manca,"
                },
                {
                    "verse": "isvelta gola e bianca,"
                },
                {
                    "verse": "immaculata sanza alcun difetto!"
                }
            ],
            [
                {
                    "verse": "L'ampio compresso e ben composto petto,"
                },
                {
                    "verse": "nel qual di due pomette vi fa l'orma,"
                },
                {
                    "verse": "ha tanta bella forma"
                },
                {
                    "verse": "che appor non vi potrebbe il senno umano;"
                }
            ],
            [
                {
                    "verse": "distese braccia grosse e la sua mano"
                },
                {
                    "verse": "bianca, sottile, vezzosa e pulita,"
                },
                {
                    "verse": "sottili e lunghe dita"
                },
                {
                    "verse": "colle unghie rilucenti e un poco tenere."
                }
            ],
            [
                {
                    "verse": "Ogni altra parte d'esta nuova Venere,"
                },
                {
                    "verse": "che tien coperta d'assai belle veste,"
                },
                {
                    "verse": "m'ha detto Amor che queste"
                },
                {
                    "verse": "rispondon tanto quanto ragion chiede."
                }
            ],
            [
                {
                    "verse": "Da poi ch'ella \u00e8 cos\u00ec dal capo al piede,"
                },
                {
                    "verse": "a tanta bella forma io, come lieto,"
                },
                {
                    "verse": "dir\u00f2 che Pulicreto"
                },
                {
                    "verse": "non la potrebbe disegnar pi\u00f9 bella."
                }
            ],
            [
                {
                    "verse": "E sopra ogni altra donna ella favella"
                },
                {
                    "verse": "con atto gentil, dolze ed apuntato,"
                },
                {
                    "verse": "e non le segga allato"
                },
                {
                    "verse": "chi non \u00e8 come lei pien d'onest\u00e0."
                }
            ],
            [
                {
                    "verse": "Deh, quanto ella par donna di belt\u00e0"
                },
                {
                    "verse": "negli atti modi suoi cotanto onesti"
                },
                {
                    "verse": "che par che di lei eschi"
                },
                {
                    "verse": "quanto esser pu\u00f2 in donna leggiadria!"
                }
            ],
            [
                {
                    "verse": "E quando va con l'altre per la via,"
                },
                {
                    "verse": "piglia l'andar s\u00fcave e come un gru"
                },
                {
                    "verse": "va supra s\u00e9 o pi\u00f9"
                },
                {
                    "verse": "pellegrinamente che un falcone."
                }
            ],
            [
                {
                    "verse": "Ella ha sempre con seco a ogni stagione"
                },
                {
                    "verse": "tanta benignit\u00e0 e reverenzia"
                },
                {
                    "verse": "che ogni contenenzia"
                },
                {
                    "verse": "parer faralla sopr'ogni donna degna."
                }
            ],
            [
                {
                    "verse": "E non sol la prudenza in costei regna,"
                },
                {
                    "verse": "ch'ell'\u00e8 forte, costante e temperata"
                },
                {
                    "verse": "che par ch'ella sia stata"
                },
                {
                    "verse": "sempre governator di tutto il mondo."
                }
            ],
            [
                {
                    "verse": "Or pu\u00f2 ir la magnanimit\u00e0 al fondo,"
                },
                {
                    "verse": "per\u00f2, mentre costei al mondo vive,"
                },
                {
                    "verse": "pu\u00f2 largo dir chi scrive"
                },
                {
                    "verse": "ch'essa ne sia sol vero sostegno."
                }
            ],
            [
                {
                    "verse": "Or pensa tu, lettor, se, fuor d'ingegno,"
                },
                {
                    "verse": "se a questa donna savia e virtuosa,"
                },
                {
                    "verse": "sottile ed ingegnosa,"
                },
                {
                    "verse": "se con ragion si pu\u00f2 apporre niente."
                }
            ],
            [
                {
                    "verse": "Or dunque posso io dire apertamente"
                },
                {
                    "verse": "che di qualunque donna fama vola"
                },
                {
                    "verse": "costei per s\u00e9 la 'nvola,"
                },
                {
                    "verse": "occupando dell'altre il favellare."
                }
            ],
            [
                {
                    "verse": "Dunque mi posso pi\u00f9 d'Amor lodare"
                },
                {
                    "verse": "che gnuno amante mai al mondo fosse,"
                },
                {
                    "verse": "poi ch'Amor mi condusse"
                },
                {
                    "verse": "a amar donna d'ogni donna donna."
                }
            ],
            [
                {
                    "verse": "E pi\u00f9 la loderei, se questa donna"
                },
                {
                    "verse": "fosse nel cuore inverso di me punta"
                },
                {
                    "verse": "coll'amorosa punta"
                },
                {
                    "verse": "di quel quadrel che punse il cuor d'El\u00e8na,"
                }
            ],
            [
                {
                    "verse": "o pur ch'ella sentisse quella pena"
                },
                {
                    "verse": "che sent\u00ec Dido del troiano Enea,"
                },
                {
                    "verse": "o quella che a Medea"
                },
                {
                    "verse": "fece a Iason acquistar tanto onore."
                }
            ],
            [
                {
                    "verse": "Se esser non pu\u00f2 questo, io prego Amore"
                },
                {
                    "verse": "che almen certa la facci di mia doglia,"
                },
                {
                    "verse": "ched e' le piaccia e voglia"
                },
                {
                    "verse": "saper come io le son servo fedele;"
                }
            ],
            [
                {
                    "verse": "ed ella, che non fu gi\u00e0 mai crudele,"
                },
                {
                    "verse": "lieta, benigna e con un dolce aspetto,"
                },
                {
                    "verse": "spero che mi dar\u00e0 qualche diletto."
                }
            ]
        ]
    }
]