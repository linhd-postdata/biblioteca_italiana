[
    {
        "author": "Giovanni Boccaccio",
        "work": "Teseida",
        "title": "SONETTO",
        "structure": "sonetto",
        "url": "http://www.bibliotecaitaliana.it/testo/bibit000041",
        "text": [
            [
                {
                    "verse": "Nel primo vince Teseo l'Amazone,"
                },
                {
                    "verse": "nel secondo Creon certanamente;"
                },
                {
                    "verse": "nel terzo amore Arcita e Palemone"
                },
                {
                    "verse": "occupa, e 'l quarto mostra la dolente"
                }
            ],
            [
                {
                    "verse": "vita d'Arcita uscito di prigione;"
                },
                {
                    "verse": "il quinto la battaglia virilmente"
                },
                {
                    "verse": "da Penteo fatta col suo compagnone,"
                },
                {
                    "verse": "e 'l sesto poi convoca molta gente"
                }
            ],
            [
                {
                    "verse": "alla battaglia; il settimo li afrena,"
                },
                {
                    "verse": "l'ottavo l'un di lor fa vincitore,"
                },
                {
                    "verse": "il nono mostra il triunfo e la pena"
                }
            ],
            [
                {
                    "verse": "d'Arcita, e l'altro il suo mortal dolore;"
                },
                {
                    "verse": "e l'undecimo Arcita al rogo mena;"
                },
                {
                    "verse": "l'ultimo Emilia dona all'amadore."
                }
            ]
        ]
    },
    {
        "author": "Giovanni Boccaccio",
        "work": "Teseida",
        "title": "SONETTO",
        "structure": "sonetto",
        "url": "http://www.bibliotecaitaliana.it/testo/bibit000041",
        "text": [
            [
                {
                    "verse": "O sacre Muse, le quali io adoro"
                },
                {
                    "verse": "e con digiuni onoro e vigilando,"
                },
                {
                    "verse": "di voi la grazia in tal guisa cercando"
                },
                {
                    "verse": "qual l'acquistaron palidi coloro"
                }
            ],
            [
                {
                    "verse": "a' quai poi deste il grazioso alloro"
                },
                {
                    "verse": "in sul fonte castalio poetando,"
                },
                {
                    "verse": "i versi lor sovente esaminando"
                },
                {
                    "verse": "col vostro canto sottile e sonoro,"
                }
            ],
            [
                {
                    "verse": "io ho ricolte della vostra mensa"
                },
                {
                    "verse": "alcune miche da quella cadute,"
                },
                {
                    "verse": "e come seppi qui l'ho compilate;"
                }
            ],
            [
                {
                    "verse": "le quai vi priego che voi le portiate"
                },
                {
                    "verse": "liete alla donna in cui la mia salute"
                },
                {
                    "verse": "vive, ma ella forse nol si pensa,"
                }
            ],
            [
                {
                    "verse": "e con lei insieme il nome date e 'l canto"
                },
                {
                    "verse": "e 'l corso ad esse, se ne le cal tanto."
                }
            ]
        ]
    },
    {
        "author": "Giovanni Boccaccio",
        "work": "Teseida",
        "title": "RISPOSTA DELLE MUSE",
        "structure": "sonetto",
        "url": "http://www.bibliotecaitaliana.it/testo/bibit000041",
        "text": [
            [
                {
                    "verse": "Portati abbiam tuoi versi e bel lavoro,"
                },
                {
                    "verse": "o caro alunno, di Teseo cantando,"
                },
                {
                    "verse": "e i due Teban, l'un preso e l'altro in bando,"
                },
                {
                    "verse": "combatter per Emilia donna loro."
                }
            ],
            [
                {
                    "verse": "La pi\u00f9 tua donna ch'essa di costoro,"
                },
                {
                    "verse": "gli altrui riletti amori a s\u00e9 recando,"
                },
                {
                    "verse": "fra s\u00e9 soletta disse sospirando:"
                },
                {
                    "verse": "\u00abAhi, quante d'amor forze in costor foro!\u00bb."
                }
            ],
            [
                {
                    "verse": "Poi di fiamma d'amor tututta accensa,"
                },
                {
                    "verse": "ci porse priego che non fosser mute"
                },
                {
                    "verse": "le ben scritte prodezze e la biltate;"
                }
            ],
            [
                {
                    "verse": "\u00abTeseida di nozze d'Emilia\u00bb, o vate,"
                },
                {
                    "verse": "nomar li piacque; e noi con note argute"
                },
                {
                    "verse": "darenli in ogni etate fama immensa."
                }
            ],
            [
                {
                    "verse": "Cos\u00ec gli abbiam, rorati al fonte santo,"
                },
                {
                    "verse": "licenziati a gire in ogni canto."
                }
            ]
        ]
    }
]