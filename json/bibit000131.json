[
    {
        "author": "Giosue Carducci",
        "work": "Odi barbare",
        "title": "PRELUDIO",
        "structure": "quartina",
        "url": "http://www.bibliotecaitaliana.it/testo/bibit000131",
        "text": [
            [
                {
                    "verse": "Odio l'usata poesia: concede"
                },
                {
                    "verse": "comoda al vulgo i flosci fianchi e senza"
                },
                {
                    "verse": "palpiti sotto i consueti amplessi"
                },
                {
                    "verse": "stendesi e dorme."
                }
            ],
            [
                {
                    "verse": "A me la strofe vigile, balzante"
                },
                {
                    "verse": "co 'l plauso e 'l piede ritmico ne' cori:"
                },
                {
                    "verse": "per l'ala a volo io c\u00f2lgola, si volge"
                },
                {
                    "verse": "ella e repugna."
                }
            ],
            [
                {
                    "verse": "Tal fra le strette d'amator silvano"
                },
                {
                    "verse": "torcesi un'evia su 'l nevoso Edone:"
                },
                {
                    "verse": "pi\u00f9 belli i vezzi del fiorente petto"
                },
                {
                    "verse": "saltan compressi,"
                }
            ],
            [
                {
                    "verse": "e baci e strilli su l'accesa bocca"
                },
                {
                    "verse": "mesconsi: ride la marmorea fronte"
                },
                {
                    "verse": "al sole, effuse in lunga onda le chiome"
                },
                {
                    "verse": "fremono a' venti."
                }
            ]
        ]
    }
]