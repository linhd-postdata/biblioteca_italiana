[
    {
        "author": "Giacomo Leopardi",
        "work": "Componimenti poetici (1809)",
        "title": "LA MORTE DI ETTORE",
        "structure": "sonetto",
        "url": "http://www.bibliotecaitaliana.it/testo/bibit000757",
        "text": [
            [
                {
                    "verse": "Fermati, duce, non ti basta? ah mira"
                },
                {
                    "verse": "Come a te s'avvicina Achille il forte,"
                },
                {
                    "verse": "Che gran furore, e insiem vendetta spira,"
                },
                {
                    "verse": "E inferocito anela alla tua morte."
                }
            ],
            [
                {
                    "verse": "Ettor non m'ode, e alla battaglia aspira;"
                },
                {
                    "verse": "Ah che quivi l'attende iniqua sorte!"
                },
                {
                    "verse": "Ei vibra il ferro: quegli si raggira,"
                },
                {
                    "verse": "E schiva il colpo colle braccia accorte"
                }
            ],
            [
                {
                    "verse": "Drizza poi l'asta sfolgorante luce;"
                },
                {
                    "verse": "Fermano il corso per mestizia i fiumi;"
                },
                {
                    "verse": "Gi\u00e0 vola il crudo acciar... fermati, o truce."
                }
            ],
            [
                {
                    "verse": "Torcon lo sguardo innorridito i Numi;"
                },
                {
                    "verse": "Il colpo arriv\u00f2 gi\u00e0; cadde il gran duce,"
                },
                {
                    "verse": "Cadde l'Eroe di Troja, e chiuse i lumi."
                }
            ]
        ]
    },
    {
        "author": "Giacomo Leopardi",
        "work": "Componimenti poetici (1809)",
        "title": "LA TEMPESTA DELLA FLOTTA TROJANA",
        "structure": "sonetto",
        "url": "http://www.bibliotecaitaliana.it/testo/bibit000757",
        "text": [
            [
                {
                    "verse": "Fugge il vinto Trojan le Frigie sponde;"
                },
                {
                    "verse": "Ma all'Argiva Giunone ancor non basta,"
                },
                {
                    "verse": "Eolo co' venti gi\u00e0 solleva l'onde,"
                },
                {
                    "verse": "Cui l'angusta prigione apr\u00ec coll'asta."
                }
            ],
            [
                {
                    "verse": "Gi\u00e0 il noto sotto il mar tre navi asconde,"
                },
                {
                    "verse": "E tre ne aggira per la region vasta"
                },
                {
                    "verse": "Dell'ampio Oceano e gran terrore infonde"
                },
                {
                    "verse": "Nel resto della flotta ancor rimasta."
                }
            ],
            [
                {
                    "verse": "Fulmini, e dardi igniti scaglia il cielo,"
                },
                {
                    "verse": "E tuoni, e lampi manda in modi strani,"
                },
                {
                    "verse": "E si ricopre d'un'oscuro velo."
                }
            ],
            [
                {
                    "verse": "E chi mai calmer\u00e0 de' flutti insani"
                },
                {
                    "verse": "Il furore? Dal ciel deh scendi, o Delo,"
                },
                {
                    "verse": "E soccorri i tuoi miseri Trojani."
                }
            ]
        ]
    },
    {
        "author": "Giacomo Leopardi",
        "work": "Componimenti poetici (1809)",
        "title": "SCIPIONE, CHE PARTE DA ROMA",
        "structure": "sonetto",
        "url": "http://www.bibliotecaitaliana.it/testo/bibit000757",
        "text": [
            [
                {
                    "verse": "Allorch\u00e8 il vincitor, grande Affricano"
                },
                {
                    "verse": "L'ingrato abbandon\u00f2, paterno suolo;"
                },
                {
                    "verse": "Allontanossi dal crudel Romano"
                },
                {
                    "verse": "Delle Virtudi il venerato stuolo."
                }
            ],
            [
                {
                    "verse": "Maledicendo il popolo inumano,"
                },
                {
                    "verse": "Disciolto il crine, e con amaro duolo"
                },
                {
                    "verse": "L'uom vittorioso compiangendo invano,"
                },
                {
                    "verse": "Fece ritorno al suo nativo polo."
                }
            ],
            [
                {
                    "verse": "Scipione intanto, che con man trionfante"
                },
                {
                    "verse": "Tante palme raccolse, e tanti allori;"
                },
                {
                    "verse": "Ora travaglia intorno a umili piante."
                }
            ],
            [
                {
                    "verse": "Ma qu\u00ec la virt\u00f9 sua meglio risplende,"
                },
                {
                    "verse": "E degli antichi meritati onori"
                },
                {
                    "verse": "Gloria maggiore a lui tal vita rende."
                }
            ]
        ]
    },
    {
        "author": "Giacomo Leopardi",
        "work": "Componimenti poetici (1809)",
        "title": "LA MORTE",
        "structure": "sonetto",
        "url": "http://www.bibliotecaitaliana.it/testo/bibit000757",
        "text": [
            [
                {
                    "verse": "Ahi Morte, Morte! ecco la scorgo ardita,"
                },
                {
                    "verse": "Che la tremenda falce intorno ruota,"
                },
                {
                    "verse": "E la pallida turba a tutti addita;"
                },
                {
                    "verse": "Cinta da gente umile a lei devota."
                }
            ],
            [
                {
                    "verse": "Mostra in un antro oscuro quei, che in vita"
                },
                {
                    "verse": "Regia splendero, oppur la fecer nota"
                },
                {
                    "verse": "Con degne azioni, e quelle, cui Sorita"
                },
                {
                    "verse": "Beltade un d\u00ec fregi\u00f2 la rosea gota."
                }
            ],
            [
                {
                    "verse": "Veggo, che attorno ria gli fan corona"
                },
                {
                    "verse": "E Peste, e Febre, e la scarnata Tisi,"
                },
                {
                    "verse": "E ogni malor, che prede a Morte dona."
                }
            ],
            [
                {
                    "verse": "O Dio, per cui voler dobbiamo uccisi"
                },
                {
                    "verse": "Dal ferro suo cader, deh ci perdona,"
                },
                {
                    "verse": "E fa, che mai da te ne andiam divisi."
                }
            ]
        ]
    },
    {
        "author": "Giacomo Leopardi",
        "work": "Componimenti poetici (1809)",
        "title": "IL PASTORE, E LA SERPE",
        "structure": "non-definito",
        "url": "http://www.bibliotecaitaliana.it/testo/bibit000757",
        "text": [
            [
                {
                    "verse": "Dal freddo fatta gelida"
                },
                {
                    "verse": "Vide un Pastore in terra"
                },
                {
                    "verse": "Serpe giacer cerulea,"
                },
                {
                    "verse": "Atta non pi\u00f9 a far guerra."
                }
            ],
            [
                {
                    "verse": "Egli commosso a tenera"
                },
                {
                    "verse": "Piet\u00e0 di sua nemica,"
                },
                {
                    "verse": "Questa gelata, e languida"
                },
                {
                    "verse": "Alza con mano amica."
                }
            ],
            [
                {
                    "verse": "Poi nel suo seno accoglie"
                },
                {
                    "verse": "L'intirizzita biscia,"
                },
                {
                    "verse": "E con pietosa mano"
                },
                {
                    "verse": "La scalda insieme, e liscia"
                }
            ],
            [
                {
                    "verse": "Colei gli spirti appena"
                },
                {
                    "verse": "Riprese, che al Pastore"
                },
                {
                    "verse": "Rivolse l'aspra lingua,"
                },
                {
                    "verse": "E il ceffo traditore."
                }
            ],
            [
                {
                    "verse": "E l'uomo s\u00ec benefico"
                },
                {
                    "verse": "Colla feroce bocca"
                },
                {
                    "verse": "Ferisce, egli in un subito"
                },
                {
                    "verse": "Al suol morto trabocca"
                }
            ],
            [
                {
                    "verse": "Chi porta a' tristi ajuto"
                },
                {
                    "verse": "Presto si pentir\u00e0"
                },
                {
                    "verse": "D'aver beneficato"
                },
                {
                    "verse": "Chi ben oprar non sa."
                }
            ]
        ]
    },
    {
        "author": "Giacomo Leopardi",
        "work": "Componimenti poetici (1809)",
        "title": "LA TEMPESTA",
        "structure": "canzone",
        "url": "http://www.bibliotecaitaliana.it/testo/bibit000757",
        "text": [
            [
                {
                    "verse": "Sopra l'erbetta tenera"
                },
                {
                    "verse": "Sta un Pastorello assiso,"
                },
                {
                    "verse": "E il gregge suo, che pascola"
                },
                {
                    "verse": "Guarda con lieto viso."
                }
            ],
            [
                {
                    "verse": "A lui d'accanto mormora"
                },
                {
                    "verse": "Il ruscelletto lieve,"
                },
                {
                    "verse": "Quegli dell'acqua limpida"
                },
                {
                    "verse": "Placidamente beve."
                }
            ],
            [
                {
                    "verse": "Quand'ecco vede sorgere"
                },
                {
                    "verse": "Nube nel cielo oscura,"
                },
                {
                    "verse": "Che in breve tempo ingombralo,"
                },
                {
                    "verse": "e inspira a ognun paura."
                }
            ],
            [
                {
                    "verse": "Ella si scioglie in grandine,"
                },
                {
                    "verse": "Che con tremendo orrore"
                },
                {
                    "verse": "Tutto flagella il povero"
                },
                {
                    "verse": "Campetto del Pastore."
                }
            ],
            [
                {
                    "verse": "Mugghiano tuoni orribili,"
                },
                {
                    "verse": "Striscia nell'aere il lampo,"
                },
                {
                    "verse": "Cadon veloci folgori,"
                },
                {
                    "verse": "E sembra acceso il campo."
                }
            ],
            [
                {
                    "verse": "Protervi venti soffiano,"
                },
                {
                    "verse": "Tutto \u00e8 terrore, e tremito,"
                },
                {
                    "verse": "Le fiere si rintanano,"
                },
                {
                    "verse": "Muggisce il mar con fremito."
                }
            ],
            [
                {
                    "verse": "In fuga il Pastor misero"
                },
                {
                    "verse": "Si pone, e la sua greggia"
                },
                {
                    "verse": "Lascia in bal\u00eca del turbine"
                },
                {
                    "verse": "Del cielo, che dardeggia."
                }
            ],
            [
                {
                    "verse": "Nella cappanna ascondesi"
                },
                {
                    "verse": "Pallido, e palpitante,"
                },
                {
                    "verse": "Ed ivi appena reggesi"
                },
                {
                    "verse": "Sul piede vacillante."
                }
            ],
            [
                {
                    "verse": "Dai fori del tugurio"
                },
                {
                    "verse": "Rimira l'aere oscuro,"
                },
                {
                    "verse": "E trema, e ancor non sembragli"
                },
                {
                    "verse": "Di star quivi sicuro."
                }
            ],
            [
                {
                    "verse": "Alfine i nembi cessano,"
                },
                {
                    "verse": "S'accheta la tempesta:"
                },
                {
                    "verse": "Se n'esce allora il misero"
                },
                {
                    "verse": "Pastor con faccia mesta."
                }
            ],
            [
                {
                    "verse": "Mira spezzati gli alberi,"
                },
                {
                    "verse": "Mira il suo gregge ucciso,"
                },
                {
                    "verse": "Vede per sempre il giubilo"
                },
                {
                    "verse": "Andar da se diviso."
                }
            ],
            [
                {
                    "verse": "E piange invano, e s'agita,"
                },
                {
                    "verse": "La disperata mano"
                },
                {
                    "verse": "Al crine, al viso squallido"
                },
                {
                    "verse": "Spinge a far onta invano."
                }
            ],
            [
                {
                    "verse": "Tanto \u00e8 la speme instabile,"
                },
                {
                    "verse": "Che dileguar si suole"
                },
                {
                    "verse": "Come la nebbia al turbine,"
                },
                {
                    "verse": "Come la neve al sole."
                }
            ]
        ]
    },
    {
        "author": "Giacomo Leopardi",
        "work": "Componimenti poetici (1809)",
        "title": "CONTRO LA MINESTRA",
        "structure": "non-definito",
        "url": "http://www.bibliotecaitaliana.it/testo/bibit000757",
        "text": [
            [
                {
                    "verse": "Apri, o canora Musa, i boschi di Elicona,"
                },
                {
                    "verse": "E la tua cetra cinga d'alloro una corona."
                },
                {
                    "verse": "Non or d'Eroi tu devi, o degli Dei cantare,"
                },
                {
                    "verse": "Ma solo la Minestra d'ingiurie caricare."
                },
                {
                    "verse": "Ora tu sei, Minestra, de' versi miei l'oggetto,"
                },
                {
                    "verse": "E dir di abbominarti mi apporta un gran diletto."
                },
                {
                    "verse": "Ah se potessi escluderti da tutti i regni interi;"
                },
                {
                    "verse": "S\u00ec certo lo farei contento, e volentieri."
                },
                {
                    "verse": "O cibo, invan gradito dal gener nostro umano!"
                },
                {
                    "verse": "Cibo negletto, e vile, degno d'umil villano!"
                },
                {
                    "verse": "Si dice, che risusciti, quando sei buona i morti;"
                },
                {
                    "verse": "Ma oh detto degno d'uomini invero poco accorti!"
                },
                {
                    "verse": "Or dunque esser bisogna morti per goder poi"
                },
                {
                    "verse": "Di questi beneficj, che sol si dicon tuoi?"
                },
                {
                    "verse": "Non v'\u00e8 niente pei vivi? s\u00ec mi risponde ognuno;"
                },
                {
                    "verse": "Or via su me lo mostri, se puote qualcheduno."
                },
                {
                    "verse": "Ma zitto, che incomincia furioso un certo a dire;"
                },
                {
                    "verse": "Presto restiamo attenti, e cheti per sentire."
                },
                {
                    "verse": "E dir potrete vile un cibo delicato,"
                },
                {
                    "verse": "Che spesso \u00e8 il sol ristoro di un povero malato?"
                },
                {
                    "verse": "Ah questo \u00e8 uno sproposito, che deve esser punito,"
                },
                {
                    "verse": "Acci\u00f2 che mai pi\u00f9 possa esser da alcun sentito."
                }
            ],
            [
                {
                    "verse": "\u00c8 ver, ma chi desidera la Dio merc\u00e8 esser sano"
                },
                {
                    "verse": "Deve lasciar tal cibo a un povero malsano."
                },
                {
                    "verse": "Piccola seccatura vi sembra ogni mattina"
                },
                {
                    "verse": "Dover mangiare a mensa la cara minestrina?"
                },
                {
                    "verse": "Levatevi, o mortali, levatevi d'inganno,"
                },
                {
                    "verse": "Lasciate la minestra, che se non \u00e8 di danno,"
                },
                {
                    "verse": "S'almen di seccatura. Ora da te, mia Musa,"
                },
                {
                    "verse": "Sia pur la selva opaca del tuo Elicone chiusa."
                },
                {
                    "verse": "Io forse da qualcuno talor sar\u00f2 burlato,"
                },
                {
                    "verse": "Ma non m'importa bastami, d'essermi un po' sfogato."
                }
            ]
        ]
    },
    {
        "author": "Giacomo Leopardi",
        "work": "Componimenti poetici (1809)",
        "title": "PER MESSA NOVELLA",
        "structure": "sonetto",
        "url": "http://www.bibliotecaitaliana.it/testo/bibit000757",
        "text": [
            [
                {
                    "verse": "Rest\u00f2 Giuseppe in preda al rio livore"
                },
                {
                    "verse": "Della germana, invida turba, atroce,"
                },
                {
                    "verse": "Spinto Cain dall'ira, e dal furore"
                },
                {
                    "verse": "D'Abele esangue ud\u00ec l'estrema voce."
                }
            ],
            [
                {
                    "verse": "Da tai figure espresso il Dio Signore"
                },
                {
                    "verse": "Fra i scherni del Giudeo popol feroce"
                },
                {
                    "verse": "Scacci\u00f2 dal mondo il lacrimoso orrore,"
                },
                {
                    "verse": "E vittima si offr\u00ec da un alta croce."
                }
            ],
            [
                {
                    "verse": "Quel sacrificio, onde trem\u00f2 la terra,"
                },
                {
                    "verse": "Il cielo innorrid\u00ec, che al cupo Averno"
                },
                {
                    "verse": "Incessante apport\u00f2, funesta guerra;"
                }
            ],
            [
                {
                    "verse": "Offri tu Sacerdote al Nume eterno,"
                },
                {
                    "verse": "E quell'amor, che l'alma tua rinserra"
                },
                {
                    "verse": "Chiaro mostri in quest'oggi al Dio superno."
                }
            ]
        ]
    },
    {
        "author": "Giacomo Leopardi",
        "work": "Componimenti poetici (1809)",
        "title": "PER IL SANTO NATALE",
        "structure": "canzonetta",
        "url": "http://www.bibliotecaitaliana.it/testo/bibit000757",
        "text": [
            [
                {
                    "verse": "Tacciano i venti tutti,"
                },
                {
                    "verse": "Del mar si arrestin l'acque,"
                },
                {
                    "verse": "Ges\u00f9, Ges\u00f9 gi\u00e0 nacque,"
                },
                {
                    "verse": "Gi\u00e0 nacque il Redentor."
                }
            ],
            [
                {
                    "verse": "Il Sommo Nume eterno"
                },
                {
                    "verse": "Scese dall'alto cielo,"
                },
                {
                    "verse": "Il misterioso velo"
                },
                {
                    "verse": "Gi\u00e0 ruppe il Salvator."
                }
            ],
            [
                {
                    "verse": "Nascesti alfin nascesti,"
                },
                {
                    "verse": "Pacifico Signore,"
                },
                {
                    "verse": "Al mondo apportatore"
                },
                {
                    "verse": "D'alma felicit\u00e0."
                }
            ],
            [
                {
                    "verse": "L'empia, funesta colpa"
                },
                {
                    "verse": "Giacque da te fiaccata,"
                },
                {
                    "verse": "Gioisci, o avventurata,"
                },
                {
                    "verse": "Felice umanit\u00e0."
                }
            ],
            [
                {
                    "verse": "Sorgi, e solleva il capo"
                },
                {
                    "verse": "Dal sonno tuo profondo;"
                },
                {
                    "verse": "Il Redentor del mondo"
                },
                {
                    "verse": "Omai ti liber\u00f2."
                }
            ],
            [
                {
                    "verse": "N\u00f2 pi\u00f9 non senti il giogo"
                },
                {
                    "verse": "Di servit\u00f9 pesante,"
                },
                {
                    "verse": "Son le catene infrante"
                },
                {
                    "verse": "Da lui che ti salv\u00f2."
                }
            ],
            [
                {
                    "verse": "Gloria sia dunque al sommo"
                },
                {
                    "verse": "Onnipossente Iddio,"
                },
                {
                    "verse": "Guerra per sempre al rio"
                },
                {
                    "verse": "D'Averno abitator."
                }
            ],
            [
                {
                    "verse": "Dia lode e cielo, e terra,"
                },
                {
                    "verse": "Al Redentor Divino,"
                },
                {
                    "verse": "Al sommo R\u00e8 Bambino"
                },
                {
                    "verse": "Di pace alto Signor."
                }
            ]
        ]
    }
]