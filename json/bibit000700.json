[
    {
        "author": "Giusto da Volterra",
        "work": "Poesie",
        "title": "I",
        "structure": "sonetto",
        "url": "http://www.bibliotecaitaliana.it/testo/bibit000700",
        "text": [
            [
                {
                    "verse": "Non per dormir s'acquist'onore o regno,"
                },
                {
                    "verse": "n\u00e9 per fuggir si viene in alto stato,"
                },
                {
                    "verse": "n\u00e9 per rispondere ognor quand'\u00e8 chiamato,"
                },
                {
                    "verse": "s\u00ec morte per superbia e per isdegno."
                }
            ],
            [
                {
                    "verse": "Non troppo dura chi si vuol far segno,"
                },
                {
                    "verse": "non chi palesa cosa in s\u00e9 serrato,"
                },
                {
                    "verse": "non chi pi\u00f9 spende che non port'a lato,"
                },
                {
                    "verse": "s\u00ec chi con tempi accosta suo 'ngegno."
                }
            ],
            [
                {
                    "verse": "Non chi vuol sempre render mal per male,"
                },
                {
                    "verse": "non chi non \u00e8 umil sofferitore,"
                },
                {
                    "verse": "s\u00ec chi conosce s\u00e9 per quel che vale."
                }
            ],
            [
                {
                    "verse": "Non chi vuol esser d'altrui usurpatore,"
                },
                {
                    "verse": "non chi non vuol vicino a s\u00e9 uguale,"
                },
                {
                    "verse": "s\u00ec chi caccia da s\u00e9 vizio ed errore."
                }
            ],
            [
                {
                    "verse": "Deh, noti di buon core"
                },
                {
                    "verse": "chi questa rima legge e seco face,"
                },
                {
                    "verse": "mentre che vive aver\u00e0 bene e pace."
                }
            ]
        ]
    },
    {
        "author": "Giusto da Volterra",
        "work": "Poesie",
        "title": "II",
        "structure": "sonetto",
        "url": "http://www.bibliotecaitaliana.it/testo/bibit000700",
        "text": [
            [
                {
                    "verse": "Temp'\u00e8 di levar su, alma gentile,"
                },
                {
                    "verse": "pi\u00f9 non dormire in oz\u00efose piume,"
                },
                {
                    "verse": "lasciar le tenebre e venire al lume"
                },
                {
                    "verse": "di perfetta virt\u00f9: non esser vile!"
                }
            ],
            [
                {
                    "verse": "Armati tutta! Deh, lascia il servile"
                },
                {
                    "verse": "giogo del tuo peccato, e nel volume"
                },
                {
                    "verse": "delle virt\u00f9 ti scrive; il buon costume"
                },
                {
                    "verse": "voglia sempre servir co' mente um\u00ecle!"
                }
            ],
            [
                {
                    "verse": "Deh, pensa quanta gloria onora Cato,"
                },
                {
                    "verse": "Cesare, Iscip\u00efon, Fabrizio ancora,"
                },
                {
                    "verse": "pi\u00f9 e pi\u00f9 molti, ch'i' non t'ho contato,"
                }
            ],
            [
                {
                    "verse": "che per virt\u00f9 non si curaron fora"
                },
                {
                    "verse": "di vita uscire e, ciascun meritato,"
                },
                {
                    "verse": "quivi la fama e 'l ciel di su gli onora."
                }
            ]
        ]
    }
]