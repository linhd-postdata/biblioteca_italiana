[
    {
        "author": "Lancino Curti",
        "work": "Rime",
        "title": "I",
        "structure": "sonetto",
        "url": "http://www.bibliotecaitaliana.it/testo/bibit000359",
        "text": [
            [
                {
                    "verse": "Che fai, alma, che pensi, o spirto humile?"
                },
                {
                    "verse": "Vedi ch'amor il tuo foco radoppia,"
                },
                {
                    "verse": "anzi \u00e8 madonna che 'l suo mal t'aproppia"
                },
                {
                    "verse": "unde ritorni despettoso e vile."
                }
            ],
            [
                {
                    "verse": "Amor che move ogni pensier gentile"
                },
                {
                    "verse": "dal viso e da' begli occhij i versi acoppia,"
                },
                {
                    "verse": "s\u00ec ch'al suon di lamenti el duolo scoppia"
                },
                {
                    "verse": "e rimbomba pur alto el debol stile."
                }
            ],
            [
                {
                    "verse": "Madonna verso el ciel batendo l'ale"
                },
                {
                    "verse": "a contemplar se stessa \u00e8 tanto vaga"
                },
                {
                    "verse": "che non s'inclina a remirar pi\u00f9 basso."
                }
            ],
            [
                {
                    "verse": "Il cor, di doglia e 'n suspirar s'apaga:"
                },
                {
                    "verse": "piangendo el dolce nome, \u00e8 roccho e lasso,"
                },
                {
                    "verse": "oh pena eterna amar cosa mortale!"
                }
            ]
        ]
    },
    {
        "author": "Lancino Curti",
        "work": "Rime",
        "title": "II",
        "structure": "sonetto",
        "url": "http://www.bibliotecaitaliana.it/testo/bibit000359",
        "text": [
            [
                {
                    "verse": "Congiunse el ciel ogni beata copia"
                },
                {
                    "verse": "in te, dolce signor, el magisterio"
                },
                {
                    "verse": "mostr\u00f2 natura, e la fortuna imperio,"
                },
                {
                    "verse": "per farti el specchio unde virt\u00f9 s'accopia."
                }
            ],
            [
                {
                    "verse": "Non prende error chi t'assomiglia e apropia"
                },
                {
                    "verse": "a chi sol vola sott'ogni hemisperio,"
                },
                {
                    "verse": "con ragion temo che l'humel psalterio"
                },
                {
                    "verse": "non habbi a sdegno se 'l canto radopia."
                }
            ],
            [
                {
                    "verse": "Spirto gentile, mansueto, altiero,"
                },
                {
                    "verse": "honor al secol tuo di gloria sola,"
                },
                {
                    "verse": "per arme illustre e di saper pi\u00f9 vago;"
                }
            ],
            [
                {
                    "verse": "una anima divota, un cor sincero"
                },
                {
                    "verse": "accoglie, che a te vien di s\u00e9 presago"
                },
                {
                    "verse": "como a la biscia Philomena vola."
                }
            ]
        ]
    },
    {
        "author": "Lancino Curti",
        "work": "Rime",
        "title": "III",
        "structure": "sonetto",
        "url": "http://www.bibliotecaitaliana.it/testo/bibit000359",
        "text": [
            [
                {
                    "verse": "Donna sfacciata in terra, al ciel nimica,"
                },
                {
                    "verse": "o sentina di fode, a vitij chiostro,"
                },
                {
                    "verse": "impia e nera sotto biancho et ostro,"
                },
                {
                    "verse": "vario animale e fiera biscia antica."
                }
            ],
            [
                {
                    "verse": "Aspra tempesta a la stagione aprica"
                },
                {
                    "verse": "che di ben privi tutto 'l viver nostro,"
                },
                {
                    "verse": "per dolce hay felle e per lacte colostro,"
                },
                {
                    "verse": "non expectato premio a la fatica."
                }
            ],
            [
                {
                    "verse": "Ah vergogna del ciel, atro principio,"
                },
                {
                    "verse": "che sdegno et ira sempre al fin acervi,"
                },
                {
                    "verse": "pessima fera d'ogni vil mancipio!"
                }
            ],
            [
                {
                    "verse": "Chi de servir ripensa 'l cor riservi:"
                },
                {
                    "verse": "compona Roma con Camillo e Scipio,"
                },
                {
                    "verse": "tal fructo attende chi a l'ingrato servi."
                }
            ]
        ]
    },
    {
        "author": "Lancino Curti",
        "work": "Rime",
        "title": "IV",
        "structure": "sonetto",
        "url": "http://www.bibliotecaitaliana.it/testo/bibit000359",
        "text": [
            [
                {
                    "verse": "El tempo vola e ogni momento et hora"
                },
                {
                    "verse": "veloce (in tal pensar mi faccio exangue),"
                },
                {
                    "verse": "Venere meco in servitute langue,"
                },
                {
                    "verse": "la vecchia libert\u00e0 gridando plora."
                }
            ],
            [
                {
                    "verse": "Amor che 'l viso a peregrin scolora"
                },
                {
                    "verse": "sotto la benda vien di foco e sangue,"
                },
                {
                    "verse": "poy dice: \u00abIllustre sir che exalti l'angue"
                },
                {
                    "verse": "el qual mio regno genuflexo adora,"
                }
            ],
            [
                {
                    "verse": "non si conviene pi\u00f9 l'usanza antiqua"
                },
                {
                    "verse": "porre in oblio, ch\u00e9 non gli \u00e8 sicuro"
                },
                {
                    "verse": "frenare el bon destier a mezzo 'l corso."
                }
            ],
            [
                {
                    "verse": "L'edicto acerbo immansueto e duro"
                },
                {
                    "verse": "cancella et unge a poledrazzi el morso"
                },
                {
                    "verse": "e drizza el lor camin da via obliqua;"
                }
            ],
            [
                {
                    "verse": "che gi\u00e0 vedo l'iniqua"
                },
                {
                    "verse": "sorte che casca a chi non piglia Cresma:"
                },
                {
                    "verse": "chi non fa Carneval non vol Quaresma!\u00bb"
                }
            ]
        ]
    },
    {
        "author": "Lancino Curti",
        "work": "Rime",
        "title": "V",
        "structure": "sonetto",
        "url": "http://www.bibliotecaitaliana.it/testo/bibit000359",
        "text": [
            [
                {
                    "verse": "Fortuna e fato e troppo amar con fede,"
                },
                {
                    "verse": "la libert\u00e0 venduta e l'alma in pegno,"
                },
                {
                    "verse": "un alto desiar, mio vago ingegno"
                },
                {
                    "verse": "con  di sperar mercede."
                }
            ],
            [
                {
                    "verse": "Invisibil tributo al par richiede,"
                },
                {
                    "verse": "de focosi suspiri el pecto pregno,"
                },
                {
                    "verse": "in gentil core vergognoso sdegno,"
                },
                {
                    "verse": "fiama che strugi et tardi e may si vede."
                }
            ],
            [
                {
                    "verse": "Avorio e perle ascose in bel corallo,"
                },
                {
                    "verse": "capegli e fila d'or sopra due stelle"
                },
                {
                    "verse": "son di mia morte e di salute l'angue."
                }
            ],
            [
                {
                    "verse": "El sfavillar de' raggi e due fiammelle"
                },
                {
                    "verse": "e la dolcezza che m'ha facto exangue"
                },
                {
                    "verse": "cagion e scusa son del mio gran fallo."
                }
            ]
        ]
    },
    {
        "author": "Lancino Curti",
        "work": "Rime",
        "title": "VI",
        "structure": "sonetto",
        "url": "http://www.bibliotecaitaliana.it/testo/bibit000359",
        "text": [
            [
                {
                    "verse": "Hoggi medemo influxo el ciel rivolta"
                },
                {
                    "verse": "quando, di giaccio fra faville acese"
                },
                {
                    "verse": "esser credendo, senza far difese,"
                },
                {
                    "verse": "ardere cominciay la prima volta."
                }
            ],
            [
                {
                    "verse": "Senz'altro antiveder, senz'altra ascolta,"
                },
                {
                    "verse": "fra mille lacci e mille rete tese,"
                },
                {
                    "verse": "o dolce inganno! o care amate offese!"
                },
                {
                    "verse": "ligata l'alma fu n\u00e9 may pi\u00f9 sciolta."
                }
            ],
            [
                {
                    "verse": "Di pianto qual ogn'hor per gli occhij piove,"
                },
                {
                    "verse": "di suspiri, d'error', guaij e d'ublio"
                },
                {
                    "verse": "vivo, per maraviglia el spirto move."
                }
            ],
            [
                {
                    "verse": "Anzi son morto, anzi pur rinasco io,"
                },
                {
                    "verse": "perch\u00e9 mi ritrovo in voy bellezze nove,"
                },
                {
                    "verse": "che pi\u00f9 non voglio n\u00e9 voler desio."
                }
            ]
        ]
    },
    {
        "author": "Lancino Curti",
        "work": "Rime",
        "title": "VII",
        "structure": "sonetto",
        "url": "http://www.bibliotecaitaliana.it/testo/bibit000359",
        "text": [
            [
                {
                    "verse": "L'aere gravoso e 'l vento e pioggia e neve"
                },
                {
                    "verse": "che 'l cielo sopra noy bolle e riversa,"
                },
                {
                    "verse": "el fulgurar di Giove e l'acqua persa,"
                },
                {
                    "verse": "toni, baleni e nebbia orrida e greve"
                }
            ],
            [
                {
                    "verse": "fanno che Theti el Sol pi\u00f9 non riceve"
                },
                {
                    "verse": "ne l'unde occidentale, anzi summersa"
                },
                {
                    "verse": "vi tien la luce (oym\u00e8 vita diversa!)"
                },
                {
                    "verse": "e 'l tempo vola pur como aura leve."
                }
            ],
            [
                {
                    "verse": "Pensoso e solo sto, la guancia apoggia"
                },
                {
                    "verse": "sopra la man ch'\u00e8 gi\u00e0 di scriver stancha"
                },
                {
                    "verse": "como madonna da mia morte gode."
                }
            ],
            [
                {
                    "verse": "Contende el ciel con gli occhij ad egual pioggia,"
                },
                {
                    "verse": "al suspirar, a gridi, el spirto mancha,"
                },
                {
                    "verse": "perch\u00e9 quanto pi\u00f9 chiamo ella men ode."
                }
            ]
        ]
    },
    {
        "author": "Lancino Curti",
        "work": "Rime",
        "title": "VIII",
        "structure": "sonetto",
        "url": "http://www.bibliotecaitaliana.it/testo/bibit000359",
        "text": [
            [
                {
                    "verse": "Non sopra intona a ogni peccato Giove"
                },
                {
                    "verse": "e quando intona el fulgur non affretta,"
                },
                {
                    "verse": "Ma l'ira a tempo col giuditio assetta:"
                },
                {
                    "verse": "gran gratia d'alto e men giustitia piove;"
                }
            ],
            [
                {
                    "verse": "Se pur fra nube el cel l'aere commove"
                },
                {
                    "verse": "forte minaccia e leve \u00e8 la vendetta."
                },
                {
                    "verse": "O fra spirti beati anima eletta"
                },
                {
                    "verse": "a chuy seggio superno el cel rinove,"
                }
            ],
            [
                {
                    "verse": "se propria \u00e8 a Dio e a' Signor clementia"
                },
                {
                    "verse": "habbi pietate del fraterno errore,"
                },
                {
                    "verse": "ch\u00e9 magnanimo \u00e8 pi\u00f9 qual pi\u00f9 perdona."
                }
            ],
            [
                {
                    "verse": "Cos\u00ec tuo pregio, fama e 'l gran valore,"
                },
                {
                    "verse": "la gloria in pace, in l'arme l'excellentia"
                },
                {
                    "verse": "l'humil mia lyra a l'altro pol ripona."
                }
            ]
        ]
    },
    {
        "author": "Lancino Curti",
        "work": "Rime",
        "title": "IX",
        "structure": "sonetto",
        "url": "http://www.bibliotecaitaliana.it/testo/bibit000359",
        "text": [
            [
                {
                    "verse": "O aspectato su nel quinto celo"
                },
                {
                    "verse": "dove el tuo patre, hor glorioso, rege"
                },
                {
                    "verse": "di Marte el regno, e novi ordine elege"
                },
                {
                    "verse": "doppo che sciolto fu dal mortal velo;"
                }
            ],
            [
                {
                    "verse": "ricercha el mundo da Cesare a Belo"
                },
                {
                    "verse": "prudentia e fato, se  correge"
                },
                {
                    "verse": "ne' figlij, e 'l proprio suo valor rilege"
                },
                {
                    "verse": "che di  essi han nobel zelo."
                }
            ],
            [
                {
                    "verse": "Vero figliolo, anzi un fulgor di Marte,"
                },
                {
                    "verse": "se in te riluce el grande honor paterno"
                },
                {
                    "verse": "fami benigno el tuo pietoso Moro."
                }
            ],
            [
                {
                    "verse": "De la tua gratia una drachma comparte"
                },
                {
                    "verse": "se con ginocchia in terra humil t'adoro"
                },
                {
                    "verse": "e se mia Musa puol far nome eterno."
                }
            ]
        ]
    },
    {
        "author": "Lancino Curti",
        "work": "Rime",
        "title": "X",
        "structure": "sonetto",
        "url": "http://www.bibliotecaitaliana.it/testo/bibit000359",
        "text": [
            [
                {
                    "verse": "Pasco di fiamma e mi nutrisco in foco,"
                },
                {
                    "verse": "agiaccio a l'aura di caldi suspiri"
                },
                {
                    "verse": "e sento ogn'hora in me tanti desiri"
                },
                {
                    "verse": "che voria mutar spoglia, stato e loco;"
                }
            ],
            [
                {
                    "verse": "in pene godo a l'amoroso gioco,"
                },
                {
                    "verse": "n\u00e9 scio quel s\u00ec ritien l'alma non spiri,"
                },
                {
                    "verse": "tale contrariet\u00e0 par si raggiri"
                },
                {
                    "verse": "che vivo in morte e pur soccorso invoco."
                }
            ],
            [
                {
                    "verse": "Unde, se spene paurosa agiunge"
                },
                {
                    "verse": "a quel extremo fin che mi minaccia"
                },
                {
                    "verse": "el duolo, qual pu\u00f2 dar s\u00ec mortal piagha,"
                }
            ],
            [
                {
                    "verse": "per merc\u00e8 chiedo co 'ncrocciate braccia"
                },
                {
                    "verse": "che da' begli occhij crudel stral mi punge,"
                },
                {
                    "verse": "una lachryma almen mia fede apagha."
                }
            ]
        ]
    },
    {
        "author": "Lancino Curti",
        "work": "Rime",
        "title": "XI",
        "structure": "sonetto",
        "url": "http://www.bibliotecaitaliana.it/testo/bibit000359",
        "text": [
            [
                {
                    "verse": "Phebo t'accenna e invita a un lauro verde,"
                },
                {
                    "verse": "e sede a l'umbra sciolto di pharetra,"
                },
                {
                    "verse": "di coronarte al ciel per gratia impetra"
                },
                {
                    "verse": "con fronde che per lustri honor may perde."
                }
            ],
            [
                {
                    "verse": "\u00abEcco 'l poeta nel chuy dir rinverde"
                },
                {
                    "verse": "la gloria de la lingua, e la mia cetra"
                },
                {
                    "verse": "che aresta i fiumi, e colli e monti spetra,"
                },
                {
                    "verse": "con dolci versi e vaghe rime interde.\u00bb"
                }
            ],
            [
                {
                    "verse": "Gode Helycona e gelide acque stilla"
                },
                {
                    "verse": "in vista peregrina ornate e chiare,"
                },
                {
                    "verse": "lieto ch'onori l'unde e 'l suo bel rivo."
                }
            ],
            [
                {
                    "verse": "Virt\u00f9 non sdegno in tant'haver a pare"
                },
                {
                    "verse": "s\u00ec rara al mundo che mi fan Sibylla,"
                },
                {
                    "verse": "ch'uom imortale in terra in ciel sey divo."
                }
            ]
        ]
    },
    {
        "author": "Lancino Curti",
        "work": "Rime",
        "title": "XII",
        "structure": "sonetto",
        "url": "http://www.bibliotecaitaliana.it/testo/bibit000359",
        "text": [
            [
                {
                    "verse": "S'amore o fede o conoscenza in donna"
                },
                {
                    "verse": "se ritrov\u00f2 giamay, per ben servire,"
                },
                {
                    "verse": "esser debbo io quel spera sentire"
                },
                {
                    "verse": "piet\u00e0 d'amor, anzi da voi, madonna?"
                }
            ],
            [
                {
                    "verse": "Se' a tutti i miei pensier ferma colonna"
                },
                {
                    "verse": "a l'alma afflicta sei dolce desire;"
                },
                {
                    "verse": "esser non pu\u00f2 che fin habbia 'l martire"
                },
                {
                    "verse": "ch\u00e9 crudelt\u00e0 non vol s\u00ec bella gonna."
                }
            ],
            [
                {
                    "verse": "In te el triste mio cor, dama, riposa;"
                },
                {
                    "verse": "tu sola a gli occhy mei luce suave,"
                },
                {
                    "verse": "via a la morte e di mia vita spene."
                }
            ],
            [
                {
                    "verse": "Te del mio pecto rivolgi le chiave,"
                },
                {
                    "verse": "unde se cagion sei d'ogni mio bene"
                },
                {
                    "verse": "\u2013osa"
                }
            ]
        ]
    },
    {
        "author": "Lancino Curti",
        "work": "Rime",
        "title": "XIII",
        "structure": "sonetto",
        "url": "http://www.bibliotecaitaliana.it/testo/bibit000359",
        "text": [
            [
                {
                    "verse": "Seccha ha la radice, el trunco ha in polve,"
                },
                {
                    "verse": "lungo il litto paterno, a l'acque intorno,"
                },
                {
                    "verse": "arbore dede gi\u00e0 in Thessaglia il scorno"
                },
                {
                    "verse": "a Phebo, a Daphne sotto scorza involve."
                }
            ],
            [
                {
                    "verse": "Ogni cosa al fin mira, el ciel rivolve"
                },
                {
                    "verse": "i lustri e gli anni e' mesi, a giorno a giorno,"
                },
                {
                    "verse": "el tempo fuge e may non fa soggiorno"
                },
                {
                    "verse": "per l'instabilit\u00e0 che 'l tutto assolve."
                }
            ],
            [
                {
                    "verse": "Cos\u00ec de proprie foglie han perso l'ombra"
                },
                {
                    "verse": "hedere, ulive, myrthi, palma e alloro,"
                },
                {
                    "verse": "per una amata fronde che gl'ingombra."
                }
            ],
            [
                {
                    "verse": "Serto ratorto pi\u00f9 in preggio che d'oro"
                },
                {
                    "verse": "cinge le chiome e 'l capo sacro adombra"
                },
                {
                    "verse": "quando si sale nel castalio choro."
                }
            ]
        ]
    },
    {
        "author": "Lancino Curti",
        "work": "Rime",
        "title": "XIV",
        "structure": "sonetto",
        "url": "http://www.bibliotecaitaliana.it/testo/bibit000359",
        "text": [
            [
                {
                    "verse": "Se piet\u00e0 se ritrovasse o fede"
                },
                {
                    "verse": "in bella donna, o medicina al male,"
                },
                {
                    "verse": "amor a l'umbra de tue ventose ale"
                },
                {
                    "verse": "viver voria del mio foco herede."
                }
            ],
            [
                {
                    "verse": "Miser chi spera e per suo stento crede"
                },
                {
                    "verse": "quiete o pace in questa vita frale:"
                },
                {
                    "verse": "anima stanca qual furor t'assale"
                },
                {
                    "verse": "d'eterna servit\u00f9 senza mercede?"
                }
            ],
            [
                {
                    "verse": "L'antica pregionia or te rimembra,"
                },
                {
                    "verse": "le frezze, i lacci e' ceppi e le catene,"
                },
                {
                    "verse": "el pasto di suspiri, angustie e fuogho."
                }
            ],
            [
                {
                    "verse": "Ay, che sutile ladro occulto vene,"
                },
                {
                    "verse": "e rege, chi governa el corpo e membra,"
                },
                {
                    "verse": "el collo sforza a l'assueto giuogho!"
                }
            ]
        ]
    },
    {
        "author": "Lancino Curti",
        "work": "Rime",
        "title": "XV",
        "structure": "sonetto",
        "url": "http://www.bibliotecaitaliana.it/testo/bibit000359",
        "text": [
            [
                {
                    "verse": "Signor, se raro a te pur la man porgo"
                },
                {
                    "verse": "non scuso el fallo, anzi me stesso acuso;"
                },
                {
                    "verse": "se in tutto non, ma negligentia e abuso"
                },
                {
                    "verse": "che vagho mi fan gir n\u00e9 me n'acorgo."
                }
            ],
            [
                {
                    "verse": "Pur, lido longe in alto maro i' scorgo"
                },
                {
                    "verse": "n\u00e9 pavento al veder esser deluso:"
                },
                {
                    "verse": "ch\u00e9 il sacro volto entro 'l mio pecto chiuso"
                },
                {
                    "verse": "mi drizza e guida, e a te l'alma ritorgo."
                }
            ],
            [
                {
                    "verse": "El pensier s\u00ec gentil che pi\u00f9 m'infiamma"
                },
                {
                    "verse": "a quel voler che 'l mundo avaro scaccia"
                },
                {
                    "verse": "fa ch'io t'adori riverisca et ama;"
                }
            ],
            [
                {
