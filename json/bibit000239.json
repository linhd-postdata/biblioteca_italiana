[
    {
        "author": "Zanobi Banchelli",
        "work": "Poesie",
        "title": "I",
        "structure": "sonetto",
        "url": "http://www.bibliotecaitaliana.it/testo/bibit000239",
        "text": [
            [
                {
                    "verse": "Non pu\u00f2 che 'n savio vera amist\u00e0 cadere,"
                },
                {
                    "verse": "e savio consentiamo esser beato;"
                },
                {
                    "verse": "beato ha in s\u00e9 perfetto, congregato"
                },
                {
                    "verse": "stato di tutto ben che pu\u00f2 capere."
                }
            ],
            [
                {
                    "verse": "E se in s\u00e9 di s\u00e9 in suo volere"
                },
                {
                    "verse": "pu\u00f2 contentar s\u00e9, fuor di s\u00e9 a suo stato"
                },
                {
                    "verse": "agiugnere apetisce non beato;"
                },
                {
                    "verse": "ma' per servo Fortuna il pu\u00f2 tenere."
                }
            ],
            [
                {
                    "verse": "A ben viver di s\u00e9 contento il dico;"
                },
                {
                    "verse": "amico vuol, per non essere sciolto"
                },
                {
                    "verse": "da virt\u00f9 d'amist\u00e0 caritativa."
                }
            ],
            [
                {
                    "verse": "Non per trar beneficio elegge amico,"
                },
                {
                    "verse": "ma, altrui dando, in s\u00e9 stima ricolto:"
                },
                {
                    "verse": "cos\u00ec vera amist\u00e0 virt\u00f9 cultiva."
                }
            ]
        ]
    }
]