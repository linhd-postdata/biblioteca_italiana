[
    {
        "author": "Iacopo Borgianni",
        "work": "Poesie",
        "title": "I",
        "structure": "sonetto",
        "url": "http://www.bibliotecaitaliana.it/testo/bibit000792",
        "text": [
            [
                {
                    "verse": "Cicerbita e scherola e perpinella"
                },
                {
                    "verse": "e venticinque mogge d'occhi torti"
                },
                {
                    "verse": "andandone a dormir furono scorti"
                },
                {
                    "verse": "da' merli, che guardavan due capella."
                }
            ],
            [
                {
                    "verse": "Allor, vedendo questo, una gonnella"
                },
                {
                    "verse": "baia, stracciata, disse: \u00abTutti morti"
                },
                {
                    "verse": "sarete, prima ch'usciate di porti,"
                },
                {
                    "verse": "sicch\u00e9 per voi sar\u00e0 trista novella\u00bb."
                }
            ],
            [
                {
                    "verse": "Dicesi a Norcia che stato \u00e8 veduto"
                },
                {
                    "verse": "un pesce azzurro colla coda verde"
                },
                {
                    "verse": "fuggirsi pella piena a Montaguto,"
                }
            ],
            [
                {
                    "verse": "(e) s\u00ec si sta lass\u00f9 pascendosi erbe,"
                },
                {
                    "verse": "(e) per sete stillava un suo liuto;"
                },
                {
                    "verse": "dice pel freddo la coda si perde."
                }
            ],
            [
                {
                    "verse": "Deh, non far tante merde:"
                },
                {
                    "verse": "andiancene pi\u00f9 tosto inverso Roma"
                },
                {
                    "verse": "e troverren la bertuccia che toma!"
                }
            ]
        ]
    },
    {
        "author": "Iacopo Borgianni",
        "work": "Poesie",
        "title": "II",
        "structure": "lauda",
        "url": "http://www.bibliotecaitaliana.it/testo/bibit000792",
        "text": [
            [
                {
                    "verse": "Misericordia, Madre pia;"
                },
                {
                    "verse": "deh, piatosa di noi sia!"
                }
            ],
            [
                {
                    "verse": "Misericordia, o avocata,"
                },
                {
                    "verse": "di questa gente scelerata;"
                },
                {
                    "verse": "piatosa sempre ne se' stata,"
                },
                {
                    "verse": "deh, Vergine. ancor ne sia!"
                }
            ],
            [
                {
                    "verse": "Madre, no' non consideriamo"
                },
                {
                    "verse": "che tutti a morire abbiamo,"
                },
                {
                    "verse": "e ne' peccati sempre stiamo"
                },
                {
                    "verse": "di male in peggio tuttavia."
                }
            ],
            [
                {
                    "verse": "Per\u00f2, Madre, misericordia!"
                },
                {
                    "verse": "Fra Dio e noi metti concordia,"
                },
                {
                    "verse": "ch\u00e9 noi siamo in gran discordia,"
                },
                {
                    "verse": "se non ci rimedi, Madre pia."
                }
            ],
            [
                {
                    "verse": "Aiutaci, Madre verace;"
                },
                {
                    "verse": "tra 'l tuo Figlio e noi la pace"
                },
                {
                    "verse": "metti, e priegal, se ti piace,"
                },
                {
                    "verse": "che ci dimetta nostra follia!"
                }
            ],
            [
                {
                    "verse": "Tutta gente, ognun feroce"
                },
                {
                    "verse": "a gridare ad alta boce:"
                },
                {
                    "verse": "\u00abColui che fu posto in croce"
                },
                {
                    "verse": "che piatoso di noi sia!\u00bb"
                }
            ],
            [
                {
                    "verse": "Alla Madre similmente"
                },
                {
                    "verse": "che prieghi il Figlio piacente,"
                },
                {
                    "verse": "ch\u00e9 perdoni a questa gente"
                },
                {
                    "verse": "e alla grande lor follia,"
                }
            ],
            [
                {
                    "verse": "ognun chiegga perdonanza"
                },
                {
                    "verse": "e poi viva in isperanza"
                },
                {
                    "verse": "sanza ignuna dubitanza,"
                },
                {
                    "verse": "ch\u00e9 salvato poi e' fia."
                }
            ]
        ]
    }
]