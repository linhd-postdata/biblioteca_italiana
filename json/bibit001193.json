[
    {
        "author": "Antonio da Bacchereto",
        "work": "Poesie",
        "title": "I",
        "structure": "sonetto",
        "url": "http://www.bibliotecaitaliana.it/testo/bibit001193",
        "text": [
            [
                {
                    "verse": "Spirto gentil, che di laurea fronde"
                },
                {
                    "verse": "s'aspetta a degnamente coronarsi,"
                },
                {
                    "verse": "e felice tuo patria e lieta farsi,"
                },
                {
                    "verse": "se, pria ch'i' chieda, Antropos non ti asconde,"
                }
            ],
            [
                {
                    "verse": "quel vago viso pi\u00f9 non mi confonde,"
                },
                {
                    "verse": "come gi\u00e0 far solea, ch\u00e9 nel ghiaccio arsi,"
                },
                {
                    "verse": "per cui tanti sospiri e prieghi sparsi,"
                },
                {
                    "verse": "ch'aren fatti ire i monti e fermar l'onde."
                }
            ],
            [
                {
                    "verse": "Sia maladetto ogni oltraggio e dispetto,"
                },
                {
                    "verse": "l'atto protervo e rigide parole"
                },
                {
                    "verse": "e chiunche 'l fece a mia voglia ribello."
                }
            ],
            [
                {
                    "verse": "S'i' piansi, or canto, e s'io vissi soggetto,"
                },
                {
                    "verse": "vivo ora in libertade, e sol mi duole"
                },
                {
                    "verse": "che 'n bestial corpo un viso sia s\u00ec bello."
                }
            ]
        ]
    }
]