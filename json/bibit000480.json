[
    {
        "author": "Lorenzo Damiani",
        "work": "Poesie",
        "title": "I",
        "structure": "sonetto",
        "url": "http://www.bibliotecaitaliana.it/testo/bibit000480",
        "text": [
            [
                {
                    "verse": "Porco putente pessimo poltrone,"
                },
                {
                    "verse": "invido iniquo ingrato iscognoscente,"
                },
                {
                    "verse": "e brutto e tristo e vile e da n\u00efente,"
                },
                {
                    "verse": "rustico rio rapace rubaldone,"
                }
            ],
            [
                {
                    "verse": "o serpe oculta odiosa, o condizione"
                },
                {
                    "verse": "di mal dimon dannato, dira mente,"
                },
                {
                    "verse": "inclino in male invidia, incontenente,"
                },
                {
                    "verse": "perir presto post\u00f9, perch'\u00e8 ragione!"
                }
            ],
            [
                {
                    "verse": "Astuto a 'nganni, ardito allo sforzare,"
                },
                {
                    "verse": "roba rubando ruddemente regni,"
                },
                {
                    "verse": "degno di mala dannazion, di morte,"
                }
            ],
            [
                {
                    "verse": "iusto iudicio \u00e8 'n punire; indugiare"
                },
                {
                    "verse": "nulla non voglio nel darti; n\u00e9 sdegni"
                },
                {
                    "verse": "oscuro obrobio o forche o mala sorte."
                }
            ]
        ]
    },
    {
        "author": "Lorenzo Damiani",
        "work": "Poesie",
        "title": "II",
        "structure": "sonetto",
        "url": "http://www.bibliotecaitaliana.it/testo/bibit000480",
        "text": [
            [
                {
                    "verse": "Grata Ciprigna pel bel pome d'oro"
                },
                {
                    "verse": "esser volendo, non favria El\u00e8na"
                },
                {
                    "verse": "rapir, n\u00e9 Tisbe Pirramo a tal pena"
                },
                {
                    "verse": "are' condotto e 'nsanguinato el moro;"
                }
            ],
            [
                {
                    "verse": "resterebbe Giove in ciel mutato toro,"
                },
                {
                    "verse": "d'Europa carco quando via la mena,"
                },
                {
                    "verse": "o non avrebbe mai ingannato Almena;"
                },
                {
                    "verse": "a Danne forma non sarie d'alloro,"
                }
            ],
            [
                {
                    "verse": "gentil da Brigi se stata allor fusse,"
                },
                {
                    "verse": "l'altre tutte avanzando in ogni laude,"
                },
                {
                    "verse": "in virt\u00f9 singulare onesta e bella."
                }
            ],
            [
                {
                    "verse": "Addunque, pi\u00f9 ch'altr'uom lieto, ti gaude;"
                },
                {
                    "verse": "tu, che meritato hai tu solo avella,"
                },
                {
                    "verse": "a Dio da' grazie, ch\u00e9 a tal ti condusse."
                }
            ]
        ]
    },
    {
        "author": "Lorenzo Damiani",
        "work": "Poesie",
        "title": "III",
        "structure": "non-definito",
        "url": "http://www.bibliotecaitaliana.it/testo/bibit000480",
        "text": [
            [
                {
                    "verse": "Vera \u2014 Amicizia \u2014 glor\u00efoso \u2014 bene,"
                },
                {
                    "verse": "Amicizia \u2014 etternal \u2014 dono \u2014 d'amore;"
                },
                {
                    "verse": "glor\u00efoso \u2014 dono, \u2014 perpetuo \u2014 onore,"
                },
                {
                    "verse": "bene \u2014 d'amore \u2014 onore \u2014 contiene."
                },
                {
                    "verse": "I cieli \u2014 el mondo \u2014 carit\u00e0 \u2014 sostiene,"
                }
            ],
            [
                {
                    "verse": "el mondo \u2014 universal \u2014 regge \u2014 fervore,"
                },
                {
                    "verse": "carit\u00e0 \u2014 regge \u2014 ciaschedun \u2014 buon cuore,"
                },
                {
                    "verse": "sostien \u2014 fervore, \u2014 buon cuore \u2014 e sovviene."
                }
            ],
            [
                {
                    "verse": "Ciascun che ben \u2014 desideri \u2014 d'avere,"
                },
                {
                    "verse": "desideri \u2014 Amicizia \u2014 per sostegno,"
                },
                {
                    "verse": "e d'aver \u2014 per sostegno \u2014 caritate;"
                }
            ],
            [
                {
                    "verse": "ell'\u00e8 solo quel ben \u2014 che ci d\u00e0 \u2014 regno,"
                },
                {
                    "verse": "che ci d\u00e0 \u2014 viver lieto \u2014 e possedere"
                }
            ],
            [
                {
                    "verse": "regno \u2014 e posseder \u2014 felicitate."
                },
                {
                    "verse": "Per me' potere esprimer mio concetto,"
                },
                {
                    "verse": "in doppio modo di rimare ho detto."
                }
            ]
        ]
    }
]