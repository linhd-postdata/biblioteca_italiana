[
    {
        "author": "Lorenzo Benci",
        "work": "Poesie",
        "title": "II",
        "structure": "sonetto",
        "url": "http://www.bibliotecaitaliana.it/testo/bibit001137",
        "text": [
            [
                {
                    "verse": "O figliuol mio, che Dio ti benedica,"
                },
                {
                    "verse": "appara che m'aiuti a guadagnare;"
                },
                {
                    "verse": "quel che non sai, fattelo insegnare:"
                },
                {
                    "verse": "al tuo maestro danne la fatica!"
                }
            ],
            [
                {
                    "verse": "Racogli, aggiugni ed ancor multipr\u00ecca,"
                },
                {
                    "verse": "e del partire ancora appara a fare;"
                },
                {
                    "verse": "trai delle somme, e ve' che de' restare:"
                },
                {
                    "verse": "ogni ragion dentro a te notif\u00ecca."
                }
            ],
            [
                {
                    "verse": "Se questo fai, sarai tenuto caro"
                },
                {
                    "verse": "a fondaco o a banco ove starai:"
                },
                {
                    "verse": "di buon salaro alcun ti sar\u00e0 avaro;"
                }
            ],
            [
                {
                    "verse": "e infra 'l vulgo lieto viverai,"
                },
                {
                    "verse": "col dolce tempo passerai l'amaro,"
                },
                {
                    "verse": "e infra' pigri non ti annoverrai."
                }
            ],
            [
                {
                    "verse": "E da' buon gloria arai;"
                },
                {
                    "verse": "e fieti un ceppo a darti av\u00efamento,"
                },
                {
                    "verse": "ch\u00e9 per mai sempre ne sarai contento."
                }
            ]
        ]
    },
    {
        "author": "Lorenzo Benci",
        "work": "Poesie",
        "title": "III",
        "structure": "non-definito",
        "url": "http://www.bibliotecaitaliana.it/testo/bibit001137",
        "text": [
            [
                {
                    "verse": "Oh, quanto \u00e8 grande la tua carit\u00e0,"
                },
                {
                    "verse": "la qual ci ripresenta tua venuta"
                },
                {
                    "verse": "bambino in carne somma verit\u00e0!"
                },
                {
                    "verse": "Ben \u00e8 crudel di noi chi non si muta"
                }
            ],
            [
                {
                    "verse": "dal vizio e dal peccato a dirittura,"
                },
                {
                    "verse": "po' che 'n tal modo il buon Ies\u00f9 ci aiuta."
                },
                {
                    "verse": "Oh, quanto amor ci mostra, oh quanta cura"
                },
                {
                    "verse": "ver noi privati dell'etterno regno!"
                }
            ],
            [
                {
                    "verse": "Discese qui, per metterci in altura,"
                },
                {
                    "verse": "di Dio fatto uomo, questo Signor degno,"
                },
                {
                    "verse": "con tanta umilit\u00e0; e per\u00f2 venne"
                },
                {
                    "verse": "nell'umil madre e poi umil nel legno."
                },
                {
                    "verse": "Gloria nel cielo e pace quaggi\u00f9 dienne"
                },
                {
                    "verse": "agli uomini di buona volontate"
                },
                {
                    "verse": "e nel partirsi simil modo tenne"
                },
                {
                    "verse": "perch\u00e9 la pace ha tanta nobiltate"
                },
                {
                    "verse": "che, con quant'\u00e8, poss\u00efede ciascuno;"
                },
                {
                    "verse": "e nel partire han poi la reditate."
                },
                {
                    "verse": "Deh, con le man levate"
                },
                {
                    "verse": "al ciel, grazia rendiamo a quel bambino,"
                },
                {
                    "verse": "di Dio fatto uomo per far l'uom divino!"
                },
                {
                    "verse": ""
                }
            ]
        ]
    }
]