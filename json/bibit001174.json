[
    {
        "author": "Gino di Neri Capponi",
        "work": "Poesie",
        "title": "I",
        "structure": "sonetto",
        "url": "http://www.bibliotecaitaliana.it/testo/bibit001174",
        "text": [
            [
                {
                    "verse": "Dolci car figli miei, che, per paura"
                },
                {
                    "verse": "di pestifera morte, morte amate"
                },
                {
                    "verse": "sol pe' diversi lochi che cercate,"
                },
                {
                    "verse": "dove fama si spegne e 'l ben non dura,"
                }
            ],
            [
                {
                    "verse": "l'onor non sta ne' boschi, ove a ventura"
                },
                {
                    "verse": "dietro alle bestie bestie diventate;"
                },
                {
                    "verse": "gli uomin degni si fanno alla cittate,"
                },
                {
                    "verse": "n\u00e9 uom pu\u00f2 dirsi chi non si misura."
                }
            ],
            [
                {
                    "verse": "Deh, ritornate agli esercizi vostri,"
                },
                {
                    "verse": "ch\u00e9 in ogni parte ha potenza la morte,"
                },
                {
                    "verse": "dico qui in terra, e non si dee negare."
                }
            ],
            [
                {
                    "verse": "Amate chi la verit\u00e0 vi mostri,"
                },
                {
                    "verse": "e fate del cor rocca e l'alma forte,"
                },
                {
                    "verse": "perch\u00e9 paura onor non vi pu\u00f2 dare."
                }
            ],
            [
                {
                    "verse": "Dov'io dovete stare,"
                },
                {
                    "verse": "ch\u00e9 quando 'l tempo sar\u00e0 da fuggire,"
                },
                {
                    "verse": "figliuoli, anch'io con voi vorr\u00f2 venire."
                }
            ]
        ]
    }
]