[
    {
        "author": "Giovanni Betti",
        "work": "Poesie",
        "title": "I",
        "structure": "capitolo-ternario",
        "url": "http://www.bibliotecaitaliana.it/testo/bibit000234",
        "text": [
            [
                {
                    "verse": "Idio \u00e8 solo somma sap\u00efenza,"
                },
                {
                    "verse": "sol da s\u00e9 'nteso e se stesso intendendo;"
                },
                {
                    "verse": "lu' sa e pu\u00f2 e del tutt'ha potenza."
                }
            ],
            [
                {
                    "verse": "E, se da ogni vero el ver comprendo,"
                },
                {
                    "verse": "lu' \u00e8 'l motor di tutta la natura,"
                },
                {
                    "verse": "cagion prima d'ogni cagion lu' sendo."
                }
            ],
            [
                {
                    "verse": "E qual si sie di lui la suo figura"
                },
                {
                    "verse": "n\u00e9 per occhio mortal, n\u00e9 per gerarca"
                },
                {
                    "verse": "non si comprende, n\u00e9 suo genitura,"
                }
            ],
            [
                {
                    "verse": "n\u00e9 come s'inchiudessi in quella barca"
                },
                {
                    "verse": "di quella verginetta umil e santa"
                },
                {
                    "verse": "che di tal dono fu gioconda e carca,"
                }
            ],
            [
                {
                    "verse": "per cui s'infiora la milizia santa"
                },
                {
                    "verse": "di quel Verbo incarnato, omo e dio,"
                },
                {
                    "verse": "ch'\u00e8 uno in tre e tre una sol pianta."
                }
            ],
            [
                {
                    "verse": "D'un puro amore semplicetto e pio"
                },
                {
                    "verse": "el quale i' priego lui per suo clemenza"
                },
                {
                    "verse": "che d'ogni mi' error gli sien 'n oblio,"
                }
            ],
            [
                {
                    "verse": "prima che venga 'l d\u00ec a dar sentenza"
                },
                {
                    "verse": "quand'e' verr\u00e0 nella suo maestade"
                },
                {
                    "verse": "in pro e contro a dell'uman semenza;"
                }
            ],
            [
                {
                    "verse": "e lui lo facci sol per suo pietate"
                },
                {
                    "verse": "s\u00ec ch'i' mi trovi in lui esser giocondo"
                },
                {
                    "verse": "sempre 'n fruire in suo deitate."
                }
            ]
        ]
    },
    {
        "author": "Giovanni Betti",
        "work": "Poesie",
        "title": "II",
        "structure": "sonetto",
        "url": "http://www.bibliotecaitaliana.it/testo/bibit000234",
        "text": [
            [
                {
                    "verse": "O animal sacro, santo e degno"
                },
                {
                    "verse": "alt'e mistero, celeste e divino,"
                },
                {
                    "verse": "preordinato ad arbitro e dimino"
                },
                {
                    "verse": "di chi cerca goder te nel tuo regno,"
                }
            ],
            [
                {
                    "verse": "di ver pan se' transferit'in benigno"
                },
                {
                    "verse": "corpo di Cristo e de l'uom consubrino;"
                },
                {
                    "verse": "congiunto con l'immenso unico in trino"
                },
                {
                    "verse": "te t'offeresti per vittim'al legno,"
                }
            ],
            [
                {
                    "verse": "in sul qual fessi la santa oblazione"
                },
                {
                    "verse": "di te, Verbo incarnato, omo e dio,"
                },
                {
                    "verse": "per l'umana natura sol redemire."
                }
            ],
            [
                {
                    "verse": "Ond'i' te prego con gran devozione"
                },
                {
                    "verse": "che 'l mi' error ti risulti in oblio,"
                },
                {
                    "verse": "s\u00ec che per me a te possa venire"
                }
            ],
            [
                {
                    "verse": "e li giubil sentire"
                },
                {
                    "verse": "dell'alt'e mirabil tuo gran sinfonia,"
                },
                {
                    "verse": "ove presiedi con tuo monarchia."
                }
            ]
        ]
    },
    {
        "author": "Giovanni Betti",
        "work": "Poesie",
        "title": "III",
        "structure": "sonetto",
        "url": "http://www.bibliotecaitaliana.it/testo/bibit000234",
        "text": [
            [
                {
                    "verse": "Opra mirabil fu e gran mistero"
                },
                {
                    "verse": "quel che pel sommo Dio fu stabilito,"
                },
                {
                    "verse": "che 'n gi\u00f9 dal cielo uno in tre unito"
                },
                {
                    "verse": "scender dovessi e di farsi un vir vero"
                }
            ],
            [
                {
                    "verse": "di Maria virgo, e di tutto l'impero"
                },
                {
                    "verse": "fusse ministro in sapere e 'n arbitro,"
                },
                {
                    "verse": "e del suo santo sangue redemito"
                },
                {
                    "verse": "Isdrael ne fu con chi tien quest'il vero."
                }
            ],
            [
                {
                    "verse": "Po' ne' quaranta d\u00ec al cielo asunse,"
                },
                {
                    "verse": "tornando al Padre tutto giubilante"
                },
                {
                    "verse": "dal folle mondo che le ven gli punse."
                }
            ],
            [
                {
                    "verse": "E breve breve e non molto distante"
                },
                {
                    "verse": "surger far\u00e0 chi per morte 'l defunse,"
                },
                {
                    "verse": "venendo lui in sul tron trebunante"
                }
            ],
            [
                {
                    "verse": "e tutto tr\u00efunfante"
                },
                {
                    "verse": "a voler dar la terribil sentenza"
                },
                {
                    "verse": "in pro e contro a dell'uman semenza."
                }
            ]
        ]
    },
    {
        "author": "Giovanni Betti",
        "work": "Poesie",
        "title": "IV",
        "structure": "sonetto",
        "url": "http://www.bibliotecaitaliana.it/testo/bibit000234",
        "text": [
            [
                {
                    "verse": "L'amor, la pace e la benivolenza"
                },
                {
                    "verse": "di quell'immenso spirito divino,"
                },
                {
                    "verse": "che dal ciel venne e ch'\u00e8 in deit\u00e0 trino,"
                },
                {
                    "verse": "fr\u00fcischi in te e nella tuo semenza;"
                }
            ],
            [
                {
                    "verse": "e da ogni furore e rea sentenza"
                },
                {
                    "verse": "s\u00ec ti perservi e dieti ogni dimino,"
                },
                {
                    "verse": "s\u00ec che per te lo popol fiorentino"
                },
                {
                    "verse": "sempre s'invochi l'eterna clemenza;"
                }
            ],
            [
                {
                    "verse": "e pi\u00f9 per me interces'ella sia"
                },
                {
                    "verse": "ch'ella sie tanta ubertosa e feconda"
                },
                {
                    "verse": "ch'ella santo ti rendi e facci degno,"
                }
            ],
            [
                {
                    "verse": "che quel ch'apeti concesso ti sia"
                },
                {
                    "verse": "e che 'l volere al poter[e] risponda,"
                },
                {
                    "verse": "per che tu 'mperi e dieti el santo regno."
                }
            ],
            [
                {
                    "verse": "E me d'infim'ingegno"
                },
                {
                    "verse": "per tuo benignit\u00e0 priego ch'accetti"
                },
                {
                    "verse": "el tuo buon servo me Giovanni Betti."
                }
            ]
        ]
    },
    {
        "author": "Giovanni Betti",
        "work": "Poesie",
        "title": "V",
        "structure": "sonetto",
        "url": "http://www.bibliotecaitaliana.it/testo/bibit000234",
        "text": [
            [
                {
                    "verse": "A tanto quanto fortuna promette,"
                },
                {
                    "verse": "o de' cieli el disporre over pel fato,"
                },
                {
                    "verse": "all'apposita ci\u00f2 mal preparato"
                },
                {
                    "verse": "esser vi pu\u00f2 per divar vie o rette."
                }
            ],
            [
                {
                    "verse": "E se pur v'\u00e8, son tal quas'infette"
                },
                {
                    "verse": "nostre virt\u00f9 pello 'ngegn'obbombrato"
                },
                {
                    "verse": "d'apetito lascivo o troppo amato"
                },
                {
                    "verse": "l'esser per noi le cose interdette."
                }
            ],
            [
                {
                    "verse": "Incognito rimansi e mal si scerne"
                },
                {
                    "verse": "della varia fortuna l'occult'abisso,"
                },
                {
                    "verse": "s\u00ec che stupir non de' si a maraviglia;"
                }
            ],
            [
                {
                    "verse": "per cui lor moto son tre luc'eterne"
                },
                {
                    "verse": "e 'l senso nostro \u00e8 da lor recisso,"
                },
                {
                    "verse": "se ben collo 'ntelletto alzi le ciglia."
                }
            ],
            [
                {
                    "verse": "Ch\u00e9 non pur cinque miglia"
                },
                {
                    "verse": "va [a] orizzonte el nostro antivedere,"
                },
                {
                    "verse": "pront'in giudicio e tardi nel sapere."
                }
            ]
        ]
    },
    {
        "author": "Giovanni Betti",
        "work": "Poesie",
        "title": "VI",
        "structure": "sonetto",
        "url": "http://www.bibliotecaitaliana.it/testo/bibit000234",
        "text": [
            [
                {
                    "verse": "Don singulare, celeste e divino"
                },
                {
                    "verse": "\u00e8 da Dio dato e per lu' costituto,"
                },
                {
                    "verse": "in chi spuntano libero o soluto,"
                },
                {
                    "verse": "per amor ama e lo strano o 'l vicino."
                }
            ],
            [
                {
                    "verse": "E 'l real ver di natur serafino,"
                },
                {
                    "verse": "di s\u00e9 faccendo all'amico tributo,"
                },
                {
                    "verse": "non aspettando premio n\u00e9 saluto"
                },
                {
                    "verse": "come tal quasi per fato o destino."
                }
            ],
            [
                {
                    "verse": "In 'ntrambo fusse di du' un sol almo,"
                },
                {
                    "verse": "con perservando sempre la Dio laude,"
                },
                {
                    "verse": "l'util comune e l'onore e la fama,"
                }
            ],
            [
                {
                    "verse": "s\u00ec che ogni grado d'amicizia, in ch'almo"
                },
                {
                    "verse": "s'infoca e incende sotto sacre falde,"
                },
                {
                    "verse": "non \u00e8 mancando in s\u00e9 una sol drama."
                }
            ]
        ]
    },
    {
        "author": "Giovanni Betti",
        "work": "Poesie",
        "title": "VII",
        "structure": "sonetto",
        "url": "http://www.bibliotecaitaliana.it/testo/bibit000234",
        "text": [
            [
                {
                    "verse": "Viva verilit\u00e0, giustizia e fede"
                },
                {
                    "verse": "al sacro e santo e giusto reggimento,"
                },
                {
                    "verse": "viva piat\u00e0, e del mondo sie spento"
                },
                {
                    "verse": "chi contra g\u00efustizia si procede!"
                }
            ],
            [
                {
                    "verse": "Tenghi la verga ritta in chi transede"
                },
                {
                    "verse": "col caldo giudicar pronto e non lento,"
                },
                {
                    "verse": "n\u00e9 per tema, lusinghe o per argento"
                },
                {
                    "verse": "manchi a giustizia fai quanto richiede."
                }
            ],
            [
                {
                    "verse": "Per giustizia oprar sempre s'impera"
                },
                {
                    "verse": "e propizio a Dio fassi amico e grato,"
                },
                {
                    "verse": "prosper diviensi felice e giocondo;"
                }
            ],
            [
                {
                    "verse": "e chi l'averso fa lu' sempre altera"
                },
                {
                    "verse": "Idio e la natura s\u00ec come 'ngrato,"
                },
                {
                    "verse": "cade in r\u00fcina e precipita in fondo."
                }
            ]
        ]
    },
    {
        "author": "Giovanni Betti",
        "work": "Poesie",
        "title": "VIII",
        "structure": "sonetto",
        "url": "http://www.bibliotecaitaliana.it/testo/bibit000234",
        "text": [
            [
                {
                    "verse": "Perch'io ti paia un tal lasciami stare"
                },
                {
                    "verse": "col volto strano come un bab\u00fcasso,"
                },
                {
                    "verse": "di poca industria e d'intelletto basso,"
                },
                {
                    "verse": "sanza sc\u00efenza e nulla sapia fare;"
                }
            ],
            [
                {
                    "verse": "se tu t'avessi con meco a provare,"
                },
                {
                    "verse": "far ti vorrei veder cinque per asso,"
                },
                {
                    "verse": "e ch'uno allocco imbeccassi un gran tasso"
                },
                {
                    "verse": "di rossi grilli, e col gufo pescare."
                }
            ],
            [
                {
                    "verse": "E s\u00ec ti mosterrei per un pertugio"
                },
                {
                    "verse": "il buon Burchiello e 'l poeta Scambrilla"
                },
                {
                    "verse": "mettere in ambio un bel calderugio;"
                }
            ],
            [
                {
                    "verse": "e mosterr\u00eati la 'ritrea Sibilla"
                },
                {
                    "verse": "ire alla caccia, ed a mano un segugio,"
                },
                {
                    "verse": "a prendere orsi l\u00e0 dov'Arno stilla."
                }
            ]
        ]
    }
]