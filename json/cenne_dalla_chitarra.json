[
    {
        "url": "https://github.com/linhd-postdata/biblioteca_italiana/blob/master/xml/bibit001060",
        "author": "Cenne dalla Chitarra",
        "collection": "Risposta ai Sonetti dei mesi",
        "title": "I",
        "manually_checked": false,
        "text": [
            [
                {
                    "verse": "A la brigata avara senza arnesi:"
                },
                {
                    "verse": "in tutte quelle parti dove sono,"
                },
                {
                    "verse": "davanti a' dadi e tavolier' li pono,"
                },
                {
                    "verse": "perché al sole stien tutti distesi;"
                }
            ],
            [
                {
                    "verse": "e in camicia stieno tutti i mesi"
                },
                {
                    "verse": "per poter più leggèr' ire al perdono;"
                },
                {
                    "verse": "entro la malta e 'l fango gl'imprigiono,"
                },
                {
                    "verse": "e sien domati con diversi pesi."
                }
            ],
            [
                {
                    "verse": "E Paglierino sia lor capitano;"
                },
                {
                    "verse": "e abbia parte di tutto lo scotto,"
                },
                {
                    "verse": "con Benci e Lippo savio da Chianzano,"
                }
            ],
            [
                {
                    "verse": "Senso da Panical, c'ha leggèr trotto."
                },
                {
                    "verse": "Chi lo vedesse schermir giuso al piano,"
                },
                {
                    "verse": "ciascun direbbe: \"E' pare un anitrotto\"."
                }
            ]
        ]
    },
    {
        "url": "https://github.com/linhd-postdata/biblioteca_italiana/blob/master/xml/bibit001060",
        "author": "Cenne dalla Chitarra",
        "collection": "Risposta ai Sonetti dei mesi",
        "title": "II",
        "manually_checked": false,
        "text": [
            [
                {
                    "verse": "Io vi doto, del mese di gennaio,"
                },
                {
                    "verse": "corti con fumo al modo montanese,"
                },
                {
                    "verse": "letta qual'ha nel mare il genovese"
                },
                {
                    "verse": "acqua e vento che non cali maio,"
                }
            ],
            [
                {
                    "verse": "povertà di fanciulle a colmo staio,"
                },
                {
                    "verse": "da ber aceto forte galavrese"
                },
                {
                    "verse": "e stare come ribaldo in arnese,"
                },
                {
                    "verse": "con panni rotti, senza alcun denaio."
                }
            ],
            [
                {
                    "verse": "Ancor vi do così fatto soggiorno:"
                },
                {
                    "verse": "con una vecchia nera, vizza e ranca,"
                },
                {
                    "verse": "catun gittando de la neve a torno;"
                }
            ],
            [
                {
                    "verse": "apresso voi seder in una banca,"
                },
                {
                    "verse": "e resmirando quel so viso adorno;"
                },
                {
                    "verse": "così reposi la brigata manca."
                }
            ]
        ]
    },
    {
        "url": "https://github.com/linhd-postdata/biblioteca_italiana/blob/master/xml/bibit001060",
        "author": "Cenne dalla Chitarra",
        "collection": "Risposta ai Sonetti dei mesi",
        "title": "III",
        "manually_checked": false,
        "text": [
            [
                {
                    "verse": "Di febbraio vi metto in valle ghiaccia"
                },
                {
                    "verse": "con orsi grandi vecchi montanari,"
                },
                {
                    "verse": "e voi cacciando con rotti calzari;"
                },
                {
                    "verse": "la nieve metta sempre e si disfaccia;"
                }
            ],
            [
                {
                    "verse": "e quel che piace a l'uno, a l'altro spiaccia:"
                },
                {
                    "verse": "con fanti ben ritrosi e bacalari;"
                },
                {
                    "verse": "tornando poi la sera ad osti cari,"
                },
                {
                    "verse": "lor moglie tesser tele ed ordir accia."
                }
            ],
            [
                {
                    "verse": "E 'n questo vo' che siate senza manti,"
                },
                {
                    "verse": "con vin di pome, che stomaco affina;"
                },
                {
                    "verse": "in tal' alberghi gran sospiri e pianti,"
                }
            ],
            [
                {
                    "verse": "tremuoti, venti; e no sian con ruina,"
                },
                {
                    "verse": "ma sian sì forti, che ciascun si smanti"
                },
                {
                    "verse": "da prima sera enfino la mattina."
                }
            ]
        ]
    },
    {
        "url": "https://github.com/linhd-postdata/biblioteca_italiana/blob/master/xml/bibit001060",
        "author": "Cenne dalla Chitarra",
        "collection": "Risposta ai Sonetti dei mesi",
        "title": "IV",
        "manually_checked": false,
        "text": [
            [
                {
                    "verse": "Di marzo vi riposo in tal manera:"
                },
                {
                    "verse": "in Puglia piana, tra molti lagoni,"
                },
                {
                    "verse": "e 'n essi gran mignatte e ranaglioni;"
                },
                {
                    "verse": "poi da mangiar abbiate sorbe e péra,"
                }
            ],
            [
                {
                    "verse": "olio di noci vecchio, mane e sera,"
                },
                {
                    "verse": "per far caldegli, arance e gran cidroni;"
                },
                {
                    "verse": "barchette assai con remi e con timoni,"
                },
                {
                    "verse": "ma non possiate uscir de tal rivera."
                }
            ],
            [
                {
                    "verse": "Case di paglia con diversi razzi;"
                },
                {
                    "verse": "da bere vin gergon, che sia ben nero;"
                },
                {
                    "verse": "letta di schianze e di gionchi piumazzi."
                }
            ],
            [
                {
                    "verse": "Tra voi signore sia un priete fero,"
                },
                {
                    "verse": "che da nessun peccato vi dislazzi;"
                },
                {
                    "verse": "per ciascun luogo v'abbia un munistero."
                }
            ]
        ]
    },
    {
        "url": "https://github.com/linhd-postdata/biblioteca_italiana/blob/master/xml/bibit001060",
        "author": "Cenne dalla Chitarra",
        "collection": "Risposta ai Sonetti dei mesi",
        "title": "V",
        "manually_checked": false,
        "text": [
            [
                {
                    "verse": "D'aprile vi do vita senza lagna:"
                },
                {
                    "verse": "tafani a schiera con asini a tresca,"
                },
                {
                    "verse": "ragghiando forte, perché non v'incresca,"
                },
                {
                    "verse": "quanti ne sono in Perosa o Bevagna;"
                }
            ],
            [
                {
                    "verse": "con birri romaneschi e di Campagna,"
                },
                {
                    "verse": "e ciaschedun di pugna sì vi mesca:"
                },
                {
                    "verse": "e, quando questo a gioco no riesca,"
                },
                {
                    "verse": "restori i marri de pian de Romagna."
                }
            ],
            [
                {
                    "verse": "Per danzatori vi do vecchi armini;"
                },
                {
                    "verse": "una campana, la qual peggio sona,"
                },
                {
                    "verse": "stormento sia a voi, e non refini."
                }
            ],
            [
                {
                    "verse": "E quel che 'n millantar sì largo dona,"
                },
                {
                    "verse": "en ira vegna de li soi vicini,"
                },
                {
                    "verse": "perché di cotal gente sì ragiona."
                }
            ]
        ]
    },
    {
        "url": "https://github.com/linhd-postdata/biblioteca_italiana/blob/master/xml/bibit001060",
        "author": "Cenne dalla Chitarra",
        "collection": "Risposta ai Sonetti dei mesi",
        "title": "VI",
        "manually_checked": false,
        "text": [
            [
                {
                    "verse": "Il maggio voglio che facciate en Cagli"
                },
                {
                    "verse": "con una gente di lavoratori,"
                },
                {
                    "verse": "con muli e gran distrier' zoppicatori:"
                },
                {
                    "verse": "per pettorali forti reste d'agli."
                }
            ],
            [
                {
                    "verse": "Intorno a questo sìanovi gran bagli"
                },
                {
                    "verse": "di villan scapigliati e gridatori,"
                },
                {
                    "verse": "de' qual' resolvan sì fatti sudori,"
                },
                {
                    "verse": "che turben l'aire sì che mai non cagli;"
                }
            ],
            [
                {
                    "verse": "altri villan poi facendovi mance"
                },
                {
                    "verse": "di cipolle porrate e di marroni,"
                },
                {
                    "verse": "usando in questo gran gavazze e ciance:"
                }
            ],
            [
                {
                    "verse": "in giù letame ed in alto forconi;"
                },
                {
                    "verse": "vecchie e massai baciarsi per le guance;"
                },
                {
                    "verse": "di pecore e di porci si ragioni."
                }
            ]
        ]
    },
    {
        "url": "https://github.com/linhd-postdata/biblioteca_italiana/blob/master/xml/bibit001060",
        "author": "Cenne dalla Chitarra",
        "collection": "Risposta ai Sonetti dei mesi",
        "title": "VII",
        "manually_checked": false,
        "text": [
            [
                {
                    "verse": "Di giugno siate in tale campagnetta,"
                },
                {
                    "verse": "che ve sieno corbi ed argironcelli;"
                },
                {
                    "verse": "le chiane intorno senza caravelli:"
                },
                {
                    "verse": "entro nel mezzo v'abbia una isoletta,"
                }
            ],
            [
                {
                    "verse": "de la qual esca sì forte venetta,"
                },
                {
                    "verse": "che mille parte faccia e ramicelli"
                },
                {
                    "verse": "d'acqua di solfo, e cotai gorgoncelli,"
                },
                {
                    "verse": "sì ch'ella adacqui ben tal contradetta."
                }
            ],
            [
                {
                    "verse": "Sorbi e pruni acerbi siano lìe,"
                },
                {
                    "verse": "nespole crude e cornie savorose;"
                },
                {
                    "verse": "le rughe sian fangose e strette vie;"
                }
            ],
            [
                {
                    "verse": "le genti vi sian nere e gavinose,"
                },
                {
                    "verse": "e faccianvisi tante villanie,"
                },
                {
                    "verse": "che a Dio ed al mondo siano noiose."
                }
            ]
        ]
    },
    {
        "url": "https://github.com/linhd-postdata/biblioteca_italiana/blob/master/xml/bibit001060",
        "author": "Cenne dalla Chitarra",
        "collection": "Risposta ai Sonetti dei mesi",
        "title": "VIII",
        "manually_checked": false,
        "text": [
            [
                {
                    "verse": "Di luglio vo' che sia cotal brigata"
                },
                {
                    "verse": "en Arestano, con vin di pantani,"
                },
                {
                    "verse": "con acque salse ed aceti soprani,"
                },
                {
                    "verse": "carne di porco grassa apeverata;"
                }
            ],
            [
                {
                    "verse": "e poi, diretro a questo, una insalata"
                },
                {
                    "verse": "di salvi' e ramerin, per star più sani,"
                },
                {
                    "verse": "carne de volpe guascotta a due mani"
                },
                {
                    "verse": "e, a cui piacesse, drieto cavolata;"
                }
            ],
            [
                {
                    "verse": "con panni grossi e lunghi d'eremita:"
                },
                {
                    "verse": "e sia sì forte e sì terribil caldo"
                },
                {
                    "verse": "com'ha il solleone a la finita;"
                }
            ],
            [
                {
                    "verse": "ed un brutto converso per castaldo,"
                },
                {
                    "verse": "avaro, che si apaghi di tal vita:"
                },
                {
                    "verse": "la moglie a ciaschedun sia'n manovaldo."
                }
            ]
        ]
    },
    {
        "url": "https://github.com/linhd-postdata/biblioteca_italiana/blob/master/xml/bibit001060",
        "author": "Cenne dalla Chitarra",
        "collection": "Risposta ai Sonetti dei mesi",
        "title": "IX",
        "manually_checked": false,
        "text": [
            [
                {
                    "verse": "D'agosto vi reposo en aire bella,"
                },
                {
                    "verse": "en Sinegallia, che mi par ben fina;"
                },
                {
                    "verse": "il giorno sì vi do, per medicina,"
                },
                {
                    "verse": "che cavalcate trenta migliatella,"
                }
            ],
            [
                {
                    "verse": "e tutti en trottier' magri senza sella,"
                },
                {
                    "verse": "sempre lung'a un'acqua di sentina;"
                },
                {
                    "verse": "da l'altra parte si faccia tonnina,"
                },
                {
                    "verse": "poi ritornando a poso di macella."
                }
            ],
            [
                {
                    "verse": "E, se ben cotal poso non vi anasa,"
                },
                {
                    "verse": "mettovi en Chiusi, la città\nsovrana,"
                },
                {
                    "verse": "sì stanchi tutti da non disfar l'asa;"
                }
            ],
            [
                {
                    "verse": "la borsa di ciascuno stretta e vana,"
                },
                {
                    "verse": "e stare come lupi a bocca pasa,"
                },
                {
                    "verse": "tornando in Siena un die la semana."
                }
            ]
        ]
    },
    {
        "url": "https://github.com/linhd-postdata/biblioteca_italiana/blob/master/xml/bibit001060",
        "author": "Cenne dalla Chitarra",
        "collection": "Risposta ai Sonetti dei mesi",
        "title": "X",
        "manually_checked": false,
        "text": [
            [
                {
                    "verse": "Di settembre vi do gioielli alquanti:"
                },
                {
                    "verse": "àgor'e fusa, cumino e asolieri;"
                },
                {
                    "verse": "nottol'e chieppe con nibbi lainieri;"
                },
                {
                    "verse": "archi da lana bistorti e pesanti;"
                }
            ],
            [
                {
                    "verse": "barbagianni, assiuoli, allocchi tanti"
                },
                {
                    "verse": "quanti ne son di qui a Monpeslieri;"
                },
                {
                    "verse": "guanti di lana, borsa da braghieri:"
                },
                {
                    "verse": "stando così a vostre donne davanti."
                }
            ],
            [
                {
                    "verse": "E sempre questo comperar e vendere,"
                },
                {
                    "verse": "con tal mercadantìa il più usando;"
                },
                {
                    "verse": "e di settembre tal diletto prendere;"
                }
            ],
            [
                {
                    "verse": "e per Siena entro gir alto gridando:"
                },
                {
                    "verse": "\"Muoia chi cortesia vuol difendere,"
                },
                {
                    "verse": "ch'i Salimbeni antichi li diêr bando\"."
                }
            ]
        ]
    },
    {
        "url": "https://github.com/linhd-postdata/biblioteca_italiana/blob/master/xml/bibit001060",
        "author": "Cenne dalla Chitarra",
        "collection": "Risposta ai Sonetti dei mesi",
        "title": "XI",
        "manually_checked": false,
        "text": [
            [
                {
                    "verse": "D'ottobre vi conseglio senza fallo"
                },
                {
                    "verse": "che ne la Falterona dimorate,"
                },
                {
                    "verse": "e de le frutta, che vi so', mangiate"
                },
                {
                    "verse": "a riglie grand', e non vi canti gallo."
                }
            ],
            [
                {
                    "verse": "Chiare vi son l'acque come cristallo;"
                },
                {
                    "verse": "or bevete, figliuoli, e ristorate;"
                },
                {
                    "verse": "uccellar bon v'è a' varchi, en veritate,"
                },
                {
                    "verse": "ché farete nel collo nervo e callo,"
                }
            ],
            [
                {
                    "verse": "in quell'aire, ched è sottile e fina:"
                },
                {
                    "verse": "ben stanno en Pisa più chiari i pisani,"
                },
                {
                    "verse": "e 'l genovese lungo la marina."
                }
            ],
            [
                {
                    "verse": "Prendere 'l mi' consegl' non siate vani:"
                },
                {
                    "verse": "arosto vi darò mésto con strina,"
                },
                {
                    "verse": "che 'l sentiranno i piedi con le mani."
                }
            ]
        ]
    },
    {
        "url": "https://github.com/linhd-postdata/biblioteca_italiana/blob/master/xml/bibit001060",
        "author": "Cenne dalla Chitarra",
        "collection": "Risposta ai Sonetti dei mesi",
        "title": "XII",
        "manually_checked": false,
        "text": [
            [
                {
                    "verse": "Di novembre vi metto in un gran stagno,"
                },
                {
                    "verse": "in qual parte più pò fredda pianeta,"
                },
                {
                    "verse": "con quella povertà che non si acqueta"
                },
                {
                    "verse": "di moneta acquistar, che fa gran danno."
                }
            ],
            [
                {
                    "verse": "Ogni buona vivanda vi sia in banno;"
                },
                {
                    "verse": "per lume, facelline da verdeta;"
                },
                {
                    "verse": "castagne con mele aspre di Faeta:"
                },
                {
                    "verse": "istando tutti ensieme en briga e lagno."
                }
            ],
            [
                {
                    "verse": "E fuoco non vi sia, ma fango e gesso,"
                },
                {
                    "verse": "se no 'n alquanti luochi di romiti,"
                },
                {
                    "verse": "che sia di venti miglia lo più presso;"
                }
            ],
            [
                {
                    "verse": "di vin e carne del tutto sforniti:"
                },
                {
                    "verse": "schernendo voi qual è più laido\nbiesso,"
                },
                {
                    "verse": "veggendovi star tutti sì sguarniti."
                }
            ]
        ]
    },
    {
        "url": "https://github.com/linhd-postdata/biblioteca_italiana/blob/master/xml/bibit001060",
        "author": "Cenne dalla Chitarra",
        "collection": "Risposta ai Sonetti dei mesi",
        "title": "XIII",
        "manually_checked": false,
        "text": [
            [
                {
                    "verse": "Di dicembre vi pongo in un pantano"
                },
                {
                    "verse": "con fango, ghiaccia ed ancor panni pochi;"
                },
                {
                    "verse": "per vostro cibo fermo fave e mochi;"
                },
                {
                    "verse": "per oste abbiate un troio maremmano;"
                }
            ],
            [
                {
                    "verse": "un cuoco brutto, secco, tristo e\nvano,"
                },
                {
                    "verse": "che vi dia colli guascotti e, que', pochi:"
                },
                {
                    "verse": "e qual tra voi ha lumi, dadi o rochi"
                },
                {
                    "verse": "tenuto sia come tra savi un vano."
                }
            ],
            [
                {
                    "verse": "Panni rotti vi do e debrilati;"
                },
                {
                    "verse": "apresso questo, onn'omo en capegli;"
                },
                {
                    "verse": "bottacci di vin montanar fallati."
                }
            ],
            [
                {
                    "verse": "E chi ve mira sì se meravegli,"
                },
                {
                    "verse": "vedendovi sì brutti e rabuffati,"
                },
                {
                    "verse": "tornando in Siena così bei fancegli."
                }
            ]
        ]
    }
]