[
    {
        "author": "Carlo Martelli",
        "work": "Poesie",
        "title": "I",
        "structure": "sonetto",
        "url": "http://www.bibliotecaitaliana.it/testo/bibit001014",
        "text": [
            [
                {
                    "verse": "Ossa spogliate da la madre antica,"
                },
                {
                    "verse": "picciol sepulcro or vi richiude e serra;"
                },
                {
                    "verse": "dov'\u00e8 lo spirto che vi resse in terra"
                },
                {
                    "verse": "pur dianzi, a cui virt\u00f9 fu tanto amica?"
                }
            ],
            [
                {
                    "verse": "Se fu la vita mia dolze e aprica"
                },
                {
                    "verse": "mentre vivevi, or la nutrico in guerra,"
                },
                {
                    "verse": "cos\u00ec in cosa mortale il pensiero erra;"
                },
                {
                    "verse": "sperando in quella, perde ogni fatica."
                }
            ],
            [
                {
                    "verse": "Marco, dapoi che le novelle p\u00f3rte"
                },
                {
                    "verse": "mi furno in Grecia della tua partita,"
                },
                {
                    "verse": "vissuto ho sempre in transito di morte!"
                }
            ],
            [
                {
                    "verse": "Signor che sai dove quest'alma \u00e8 sita,"
                },
                {
                    "verse": "famela ritrovar, quando la sorte"
                },
                {
                    "verse": "verr\u00e0 per consumar mia breve vita!"
                }
            ]
        ]
    },
    {
        "author": "Carlo Martelli",
        "work": "Poesie",
        "title": "II",
        "structure": "sonetto",
        "url": "http://www.bibliotecaitaliana.it/testo/bibit001014",
        "text": [
            [
                {
                    "verse": "Signor che sopra l'onde allor salvasti"
                },
                {
                    "verse": "Pietro gi\u00e0 mosso per venire a te,"
                },
                {
                    "verse": "quando \u00abDomine \u2014 disse \u2014 adiuva me\u00bb"
                },
                {
                    "verse": "tu rispondesti: \u00abQuare dubitasti?\u00bb,"
                }
            ],
            [
                {
                    "verse": "a te volgo piangendo i pensier casti"
                },
                {
                    "verse": "come vero amator della tua f\u00e9"
                },
                {
                    "verse": "ch\u00e9 tu ne scampi per la tua merz\u00e9,"
                },
                {
                    "verse": "s\u00ec come il vecchierel tu ripescasti."
                }
            ],
            [
                {
                    "verse": "Deh, volta gli occhi al nostro piccol legno,"
                },
                {
                    "verse": "nel qual sotto il tuo nome or mi rifido,"
                },
                {
                    "verse": "ch\u00e9 mi farai d'Italia veder degno!"
                }
            ],
            [
                {
                    "verse": "Apri gli orecchi al mio ultimo grido,"
                },
                {
                    "verse": "libera me da gente di quel regno"
                },
                {
                    "verse": "che da Iarbas fu concesso a Dido!"
                }
            ],
            [
                {
                    "verse": "Signore, io mi confido"
                },
                {
                    "verse": "in te che ci dia porto e salvamento"
                },
                {
                    "verse": ".......... il vento."
                }
            ]
        ]
    },
    {
        "author": "Carlo Martelli",
        "work": "Poesie",
        "title": "III",
        "structure": "sonetto",
        "url": "http://www.bibliotecaitaliana.it/testo/bibit001014",
        "text": [
            [
                {
                    "verse": "Di porfir, d\u00efamante o di berillo"
                },
                {
                    "verse": "o di d\u00efaspro, di iacinto o petra,"
                },
                {
                    "verse": "deh, perch\u00e9 ha 'l cor costei v\u00e8r di chi impetra"
                },
                {
                    "verse": "seguir fin a la morte il suo vessillo?"
                }
            ],
            [
                {
                    "verse": "Amor, tu vedi io mi consumo e stillo"
                },
                {
                    "verse": "per seguir chi da te fugge e s'aretra:"
                },
                {
                    "verse": "prendi l'arco, lo strale e la faretra,"
                },
                {
                    "verse": "e sia verso il cor dur pronto a ferillo:"
                }
            ],
            [
                {
                    "verse": "e raccendila un po' di quel calore"
                },
                {
                    "verse": "che accendesti Fedra e Adr\u00efana"
                },
                {
                    "verse": "e quella a chi il mar tolse l'amadore."
                }
            ],
            [
                {
                    "verse": "E come ora da te si fugge e strana,"
                },
                {
                    "verse": "tu la puoi fare um\u00ecle; o mio signore,"
                },
                {
                    "verse": "fa' che la mia preghiera non sia vana!"
                }
            ]
        ]
    },
    {
        "author": "Carlo Martelli",
        "work": "Poesie",
        "title": "IV",
        "structure": "sonetto",
        "url": "http://www.bibliotecaitaliana.it/testo/bibit001014",
        "text": [
            [
                {
                    "verse": "Vedovi, soli, abandonati e sciolti,"
                },
                {
                    "verse": "errando sanza guida, duce o freno"
                },
                {
                    "verse": "or gite, pensier mei, poi che v'\u00e8 meno"
                },
                {
                    "verse": "venuto chi vi riterr\u00e0 racolti;"
                }
            ],
            [
                {
                    "verse": "co' le fiere selvagge in boschi folti,"
                },
                {
                    "verse": "pascendo l'erbe, io bagner\u00f2 il terreno"
                },
                {
                    "verse": "di lacrimar: troverr\u00f2 forse almeno"
                },
                {
                    "verse": "rimedio a consolar li affanni molti."
                }
            ],
            [
                {
                    "verse": "Poi sar\u00e0 in ciascun sasso e verde scorza"
                },
                {
                    "verse": "d'albero di mia mano un verso scritto,"
                },
                {
                    "verse": "quella ch' a morte mi costringe e forza."
                }
            ],
            [
                {
                    "verse": "E se pur mi terr\u00e0 il dolore aflitto"
                },
                {
                    "verse": "e ch'io non truovi chi mia doglia amorza,"
                },
                {
                    "verse": "far\u00f2 di me da un alto monte gitto."
                }
            ]
        ]
    },
    {
        "author": "Carlo Martelli",
        "work": "Poesie",
        "title": "V",
        "structure": "sonetto",
        "url": "http://www.bibliotecaitaliana.it/testo/bibit001014",
        "text": [
            [
                {
                    "verse": "Passo, per consolar li affanni mei,"
                },
                {
                    "verse": "sovente a rimirar quel dolze loco"
                },
                {
                    "verse": "l\u00e0 dove mi gittai dentro a un foco"
                },
                {
                    "verse": "che non lo spegneren tutti l'iddei."
                }
            ],
            [
                {
                    "verse": "O balconetto mio, ch'esser solei"
                },
                {
                    "verse": "gi\u00e0 de la misera alma festa e gioco,"
                },
                {
                    "verse": "ormai di lamentar fatto gi\u00e0 roco,"
                },
                {
                    "verse": "n\u00e9 ti riveggio pi\u00f9 come vorrei!"
                }
            ],
            [
                {
                    "verse": "O nuda, abandonata cameretta,"
                },
                {
                    "verse": "qual pria solei, or gi\u00e0 pi\u00f9 non t'adorni"
                },
                {
                    "verse": "del mio signor, che su nel ciel s'aspetta,"
                }
            ],
            [
                {
                    "verse": "quando sar\u00e0 che 'l nostro ben ritorni"
                },
                {
                    "verse": "e ch'io possi scampar da chi m'afretta,"
                },
                {
                    "verse": "quantunque or pu\u00f2, d'abreviarmi i giorni?"
                }
            ]
        ]
    },
    {
        "author": "Carlo Martelli",
        "work": "Poesie",
        "title": "VI",
        "structure": "sonetto",
        "url": "http://www.bibliotecaitaliana.it/testo/bibit001014",
        "text": [
            [
                {
                    "verse": "Volson gi\u00e0 dire alcun che la latina"
                },
                {
                    "verse": "lingua sia quella che l'altre preceda,"
                },
                {
                    "verse": "altri la greca, e pur par che si creda"
                },
                {
                    "verse": "perch\u00e9 prima ebbe il lume di dotrina;"
                }
            ],
            [
                {
                    "verse": "e molti l'ind\u00efana e chi l'armina,"
                },
                {
                    "verse": "altri l'araba persa e chi la meda"
                },
                {
                    "verse": "e chi quel[l]a ch'al mar fu data in preda:"
                },
                {
                    "verse": "o miracol di Dio che disciprina!"
                }
            ],
            [
                {
                    "verse": "Levate oramai via vostra quistione,"
                },
                {
                    "verse": "non fate del ver chiar dubio o contesa"
                },
                {
                    "verse": "in mantener pi\u00f9 Spagna che 'l brettone,"
                }
            ],
            [
                {
                    "verse": "o fiandra o l'alamanna o l'inghilesa,"
                },
                {
                    "verse": "perch\u00e9 ti mostra assai chiaro ragione"
                },
                {
                    "verse": "che sopra tutte bella \u00e8 la franzesa."
                }
            ]
        ]
    },
    {
        "author": "Carlo Martelli",
        "work": "Poesie",
        "title": "VII",
        "structure": "sonetto",
        "url": "http://www.bibliotecaitaliana.it/testo/bibit001014",
        "text": [
            [
                {
                    "verse": "Piango la mia fortuna e 'l tempo breve"
                },
                {
                    "verse": "de la mia giovent\u00f9 ch'ognor mi fuge,"
                },
                {
                    "verse": "e del novello amor, ch'or mi risurge"
                },
                {
                    "verse": "in donna fredda pi\u00f9 che ghiaccio o neve."
                }
            ],
            [
                {
                    "verse": "E gi\u00e0 sento al principio il viver greve"
                },
                {
                    "verse": "e un dolor che dentro al petto ruge,"
                },
                {
                    "verse": "e veggo un foco acceso che mi struge"
                },
                {
                    "verse": "e non posso fuggir quel ch'es[s]er deve;"
                }
            ],
            [
                {
                    "verse": "e son pur ritornato al giogo antico,"
                },
                {
                    "verse": "pers'ho la libert\u00e0, pers'ho ogni orgoglio,"
                },
                {
                    "verse": "venuto in potest\u00e0 del mio nimico."
                }
            ],
            [
                {
                    "verse": "S\u00ec mi lamento, Amor, pi\u00f9 ch'io non soglio;"
                },
                {
                    "verse": "tu m'hai volto in amaro il tempo aprico"
                },
                {
                    "verse": "e mi percuoti pi\u00f9 che l'onde scoglio."
                }
            ]
        ]
    }
]