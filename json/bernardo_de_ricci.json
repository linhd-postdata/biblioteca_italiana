        "author": "Bernardo de' Ricci",
        "collection": "Poesie",
        "title": "I",
        "manually_checked": false,
        "text": [
            [
                {
                    "verse": "Dappoi che lasciat'hai la terra egregia,"
                },
                {
                    "verse": "Florenzia degna, sol per abitare"
                },
                {
                    "verse": "nella lucida fonte in mezzo il mare"
                },
                {
                    "verse": "dell'alma, illustra e florida Vinegia,"
                }
            ],
            [
                {
                    "verse": "Bernardo è quel che questa carta fregia"
                },
                {
                    "verse": "d'inchiostro per volerti salutare,"
                },
                {
                    "verse": "sol con quel buono efetto, qual suol fare"
                },
                {
                    "verse": "un minor fra, che 'l suo maggior ben pregia."
                }
            ],
            [
                {
                    "verse": "Assai mi duol di qua la tua partita,"
                },
                {
                    "verse": "perché sanza governo esser mi pare"
                },
                {
                    "verse": "in albagia, e la stella smarrita."
                }
            ],
            [
                {
                    "verse": "Ma se tu vuoi mio almo quietare,"
                },
                {
                    "verse": "con tua doppia risposta atta e gradita"
                },
                {
                    "verse": "voglia lo stil di tuo ingegno operare,"
                }
            ],
            [
                {
                    "verse": "ché grazia singulare"
                },
                {
                    "verse": "mi fia di te saver novelle alquanto,"
                },
                {
                    "verse": "donando un po' di freno al mio dur pianto."
                }
            ]
        ]
    },
    {
        "url": "https://github.com/linhd-postdata/biblioteca_italiana/blob/master/xml/bibit001016",
        "author": "Bernardo de' Ricci",
        "collection": "Poesie",
        "title": "II",
        "manually_checked": false,
        "text": [
            [
                {
                    "verse": "Anton, se 'l mio intelletto medïoco"
                },
                {
                    "verse": "qual l'almo a petir fussi seguace,"
                },
                {
                    "verse": "forse la tua memoria, che or giace,"
                },
                {
                    "verse": "sare' da me commendata, e non poco."
                }
            ],
            [
                {
                    "verse": "Ma lo 'ngegno mio fragile e sì fioco"
                },
                {
                    "verse": "è che restar mi fa la man che tace,"
                },
                {
                    "verse": "di te scrivendo quel ch'è me' capace,"
                },
                {
                    "verse": "perché dov'io vorrei non se' in quel loco."
                }
            ],
            [
                {
                    "verse": "Il seguir le virtù, secondo me,"
                },
                {
                    "verse": "è la diritta via, mentre che noi"
                },
                {
                    "verse": "in questo scuro carcer dimoriamo."
                }
            ],
            [
                {
                    "verse": "Dunque, a cercalle io ne consiglio te"
                },
                {
                    "verse": "che tu vi metta il tempo, or che tu puoi,"
                },
                {
                    "verse": "per ornar te del penneïdo ramo."
                }
            ]
        ]
    },
    {
        "url": "https://github.com/linhd-postdata/biblioteca_italiana/blob/master/xml/bibit001016",
        "author": "Bernardo de' Ricci",
        "collection": "Poesie",
        "title": "III",
        "manually_checked": false,
        "text": [
            [
                {
                    "verse": "Ahi, babbilonio avaro e cismatico,"
                },
                {
                    "verse": "imitator d'ogni cattivo stile,"
                },
                {
                    "verse": "lupo rapace, crudo e 'n vista umìle,"
                },
                {
                    "verse": "leo febricoso, indomito e salvatico,"
                }
            ],
            [
                {
                    "verse": "a suponend' un puer se' sol pratico,"
                },
                {
                    "verse": "amico d'ozio e d'ogni cosa vile,"
                },
                {
                    "verse": "non vicar no, ma mostro di porcile,"
                },
                {
                    "verse": "da stare in sulle forche per istatico,"
                }
            ],
            [
                {
                    "verse": "tu se' aversaro della Chiesa sacra,"
                },
                {
                    "verse": "per cupidigia d'infima avarizia,"
                },
                {
                    "verse": "non prete, ma tiranno al mio parere!"
                }
            ],
            [
                {
                    "verse": "La voglia tua insaziabile e acra"
                },
                {
                    "verse": "molte volte ha 'mpedito la giustizia,"
                },
                {
                    "verse": "onde di ciò ti faccia Iddio il dovere."
                }
            ]
        ]
    }
]