            [
                {
                    "verse": "Prima vedi qual son, che tu mi leggi,"
                },
                {
                    "verse": "e quanto bel; rimira a parte a parte"
                },
                {
                    "verse": "di mini d'or le lettere e le carte,"
                },
                {
                    "verse": "e guarda se 'n bilt√† tu mi pareggi."
                }
            ],
            [
                {
                    "verse": "E poi nel primo mio sonetto leggi"
                },
                {
                    "verse": "quel di ch'i' parlo con le rime sparte;"
                },
                {
                    "verse": "e se d'amor per pruova intendi l'arte,"
                },
                {
                    "verse": "di domandarmi el mio Bernardo eleggi."
                }
            ],
            [
                {
                    "verse": "Bel come vedi, bella compagnia"
                },
                {
                    "verse": "cercando vo, chi sia servo d'amore,"
                },
                {
                    "verse": "che del mie sospirar perdon mi dia."
                }
            ],
            [
                {
                    "verse": "Non intende d'amor chi non l'ha in core:"
                },
                {
                    "verse": "bello, leggiadro e 'nnamorato sia"
                },
                {
                    "verse": "qualunque di me cerca esser lettore."
                }
            ]
        ]
    }
