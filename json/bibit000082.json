[
    {
        "author": "Ludovico Petroni",
        "work": "Poesie",
        "title": "I",
        "structure": "sonetto",
        "url": "http://www.bibliotecaitaliana.it/testo/bibit000082",
        "text": [
            [
                {
                    "verse": "Ben vedi e pensi e corpi de' mortali"
                },
                {
                    "verse": "e quanto brieve vita quelli abraccia"
                },
                {
                    "verse": "e come picciol punto li disfaccia,"
                },
                {
                    "verse": "e po' conosci l\u00e0 dove tu sali."
                }
            ],
            [
                {
                    "verse": "Guarda l'umana gente in quanti mali"
                },
                {
                    "verse": "involta ne' teren se stessa allaccia;"
                },
                {
                    "verse": "di morte non fa stima, e non s'impaccia"
                },
                {
                    "verse": "di ta' ponture n\u00e9 di morsi tali."
                }
            ],
            [
                {
                    "verse": "Ma sol d'aver la stimolata voglia"
                },
                {
                    "verse": "offusca a questa gente ogni intelletto"
                },
                {
                    "verse": "alluminato, e di virt\u00f9 lo spoglia."
                }
            ],
            [
                {
                    "verse": "Ma tu, lettor, che vedi esser costretto"
                },
                {
                    "verse": "la vita tua mancar come la foglia,"
                },
                {
                    "verse": "priegoti specchi nel mio tristo petto."
                }
            ],
            [
                {
                    "verse": "Non credare al diletto"
                },
                {
                    "verse": "di questo mondo che dimostra assai;"
                },
                {
                    "verse": "e cerca fama po' ch'a morir hai."
                }
            ]
        ]
    }
]