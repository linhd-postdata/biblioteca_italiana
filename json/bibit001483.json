[
    {
        "author": "Giovanni di Maffeo da Barberino",
        "work": "Poesie",
        "title": "I",
        "structure": "sonetto",
        "url": "http://www.bibliotecaitaliana.it/testo/bibit001483",
        "text": [
            [
                {
                    "verse": "Giovanni, i' mi parti' non meno offeso"
                },
                {
                    "verse": "che tu dalla tuo propia pass\u00efone,"
                },
                {
                    "verse": "dubitando poterne esser cagione,"
                },
                {
                    "verse": "per volerne piacer, disagio preso."
                }
            ],
            [
                {
                    "verse": "E per in parte alleviar tuo peso,"
                },
                {
                    "verse": "che tutto a t\u00f4rlo via non t'\u00e8 cagione,"
                },
                {
                    "verse": "rimbrotti, bizarrie, mugghi e quistione"
                },
                {
                    "verse": "sien teco sempre, e nel guarire acceso,"
                }
            ],
            [
                {
                    "verse": "esser di tutte cose impaz\u00efente,"
                },
                {
                    "verse": "far traboccare all'appitito il sacco,"
                },
                {
                    "verse": "viver sempre lascivo e 'ncontenente;"
                }
            ],
            [
                {
                    "verse": "aceto, agresto, agrumi e frutte a sbacco"
                },
                {
                    "verse": "in ogni cibo e continuamente"
                },
                {
                    "verse": "nondimen non lasciar l'uso di Cacco."
                }
            ],
            [
                {
                    "verse": "Seguir Venere e Bacco"
                },
                {
                    "verse": "t'ingegna, quando se' dal duol pi\u00f9 afflitto,"
                },
                {
                    "verse": "con trincar malvag\u00eca e chiavar ritto."
                }
            ]
        ]
    },
    {
        "author": "Giovanni di Maffeo da Barberino",
        "work": "Poesie",
        "title": "II",
        "structure": "sonetto",
        "url": "http://www.bibliotecaitaliana.it/testo/bibit001483",
        "text": [
            [
                {
                    "verse": "Tu mi saetti nel dir medicame"
                },
                {
                    "verse": "ed io a te bombarder\u00f2 di notte;"
                },
                {
                    "verse": "tu mi vuo' dar medicina alle gotte:"
                },
                {
                    "verse": "guarisci te con le tuo cose grame."
                }
            ],
            [
                {
                    "verse": "Oche, bue, porco, pesce con salame,"
                },
                {
                    "verse": "anguille, agrume e vivande corrotte,"
                },
                {
                    "verse": "vin turbo, grasso, agresto empie le botte"
                },
                {
                    "verse": "e di quel mangia e b\u00e9i quando n'ha' fame."
                }
            ],
            [
                {
                    "verse": "S'io mangiar posso, i' vo' starne e capponi,"
                },
                {
                    "verse": "lamprede, anguille, arrosto ed in tocchetto,"
                },
                {
                    "verse": "quaglie, fagiani e pollastri e pippioni,"
                }
            ],
            [
                {
                    "verse": "malvag\u00ece e trebbian ber per diletto,"
                },
                {
                    "verse": "mandorle, pere, pesche e buon poponi,"
                },
                {
                    "verse": "vernaccia doppo il cibo e del confetto."
                }
            ],
            [
                {
                    "verse": "Di Venere l'effetto"
                },
                {
                    "verse": "l'accidente e l'et\u00e0 me n'hanno privo,"
                },
                {
                    "verse": "ch\u00e9, se 'l potessi usar, non sare' vivo."
                }
            ]
        ]
    },
    {
        "author": "Giovanni di Maffeo da Barberino",
        "work": "Poesie",
        "title": "III",
        "structure": "capitolo-ternario",
        "url": "http://www.bibliotecaitaliana.it/testo/bibit001483",
        "text": [
            [
                {
                    "verse": "Piet\u00e0 per dio del mie grieve dolore,"
                },
                {
                    "verse": "offeso a tanto stremo e sanza amici,"
                },
                {
                    "verse": "povero, vecchio, infermo e peccatore,"
                }
            ],
            [
                {
                    "verse": "ingiusto giudicato in negli uffici,"
                },
                {
                    "verse": "n\u00e9 udita, n\u00e9 'ntesa \u00e8 mie ragione,"
                },
                {
                    "verse": "ma trattato da lor come nimici,"
                }
            ],
            [
                {
                    "verse": "di me avendo falsa oppen\u00efone,"
                },
                {
                    "verse": "sotto presunz\u00efon dannando il vero,"
                },
                {
                    "verse": "per non lo essaminar con discrezione."
                }
            ],
            [
                {
                    "verse": "Or veder puoi s'i' ho dolor severo,"
                },
                {
                    "verse": "vedermi s\u00ec crudelmente trattare"
                },
                {
                    "verse": "da chi \u00e8 posto a far giudicio intero;"
                }
            ],
            [
                {
                    "verse": "ed ogni mie ragion veggo mancare,"
                },
                {
                    "verse": "se gi... soccorso non vien da colui,"
                },
                {
                    "verse": "il qual santific\u00f2 nel medicare,"
                }
            ],
            [
                {
                    "verse": "perch\u00e9 le piaghe fattemi d'altrui"
                },
                {
                    "verse": "ingiustamente bisogna curare"
                },
                {
                    "verse": "e risanarle con gli unguenti sui."
                }
            ],
            [
                {
                    "verse": "N\u00e9 altra via ci veggio al mie scampare"
                },
                {
                    "verse": "se non di quest'uom giusto i degni unguenti,"
                },
                {
                    "verse": "ch'ogn'incurabil mal fanno saldare."
                }
            ],
            [
                {
                    "verse": "Tutt'altre vie e tutt'altri argomenti"
                },
                {
                    "verse": "sarieno scarsi, anzi diverrien vani,"
                },
                {
                    "verse": "quantunque giusti e quantunque prudenti."
                }
            ],
            [
                {
                    "verse": "Supplico adunque le suo sante mani"
                },
                {
                    "verse": "porga, e vogli veder la trista cura,"
                },
                {
                    "verse": "ch'\u00e8 suta fatta a me da questi strani;"
                }
            ],
            [
                {
                    "verse": "e poi veduta con giusta misura,"
                },
                {
                    "verse": "mi faccia giudicare e con ispaccio,"
                },
                {
                    "verse": "com'\u00e8 dotato in suo propria natura;"
                }
            ],
            [
                {
                    "verse": "s\u00ec ch'una volta di tant'aspro laccio"
                },
                {
                    "verse": "mi deggi trar, ch\u00e9, se nol fai, rimango"
                },
                {
                    "verse": "privato di speranza in tanto impaccio."
                }
            ],
            [
                {
                    "verse": "Ch\u00e9 sempre dentro al cor con l'almo piango,"
                },
                {
                    "verse": "n\u00e9 sotto 'l ciel pi\u00f9 gnuna cosa spero;"
                },
                {
                    "verse": "vilipeso qual piombo terso o fango,"
                }
            ],
            [
                {
                    "verse": "sol rimarr\u00f2 tra la gobbola e 'l zero."
                }
            ]
        ]
    }
]