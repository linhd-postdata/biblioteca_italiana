[
    {
        "author": "Giovannale Pandolfini",
        "work": "Poesie",
        "title": "I",
        "structure": "sonetto",
        "url": "http://www.bibliotecaitaliana.it/testo/bibit000071",
        "text": [
            [
                {
                    "verse": "S'avessi contemplato il Taccuino"
                },
                {
                    "verse": "Alfonso, E\u00fcclide e Almagesto,"
                },
                {
                    "verse": "aresti giudicato non s\u00ec presto"
                },
                {
                    "verse": "Marzocco tener Pisa al suo dimino."
                }
            ],
            [
                {
                    "verse": "Ma ben del culattario se' indovino,"
                },
                {
                    "verse": "ch\u00e9 studi il Pecorone o ser Agresto."
                },
                {
                    "verse": "O Pietro Scacco, non ti sia molesto:"
                },
                {
                    "verse": "di macco ti vo' dare un pien bacino!"
                }
            ],
            [
                {
                    "verse": "Ma come il zapator gran gentilezza"
                },
                {
                    "verse": "disidera costumi e leggiadria"
                },
                {
                    "verse": "e l'asino ballare alla viuola,"
                }
            ],
            [
                {
                    "verse": "cos\u00ec d'istrologia senti l'altezza"
                },
                {
                    "verse": "e vie men senti di filosofia:"
                },
                {
                    "verse": "omai tra' gufi convien tenghi scuola."
                }
            ],
            [
                {
                    "verse": "Deh, vanne a monna Ciola!"
                },
                {
                    "verse": "Parmi ti rechi allo 'ndovinare;"
                },
                {
                    "verse": "poco poco ti manca allo 'mpazzare."
                }
            ]
        ]
    }
]