[
    {
        "url": "https://github.com/linhd-postdata/biblioteca_italiana/blob/master/xml/bibit001699",
        "author": "Jacopo Donati",
        "collection": "Poesie",
        "title": "I",
        "manually_checked": false,
        "text": [
            [
                {
                    "verse": "O misera mortal volatil vita,"
                },
                {
                    "verse": "piena d'affanni in ciascheduna etate,"
                },
                {
                    "verse": "priva di pace, amore e caritate"
                },
                {
                    "verse": "per quei che la via dritta hanno smarrita"
                }
            ],
            [
                {
                    "verse": "felice chiunque fa da te partita"
                },
                {
                    "verse": "e tutte sue vie drizza e sue giornate"
                },
                {
                    "verse": "al camin retto di quella Bontate,"
                },
                {
                    "verse": "che sol di gloria fa l'alma vestita!"
                }
            ],
            [
                {
                    "verse": "E perch'io sono, ahi lasso!, di coloro"
                },
                {
                    "verse": "son nella selva di fuor del sentiero"
                },
                {
                    "verse": "e tenebrosa sanz'alcuna luce,"
                }
            ],
            [
                {
                    "verse": "te, Regina del ciel, devoto essoro"
                },
                {
                    "verse": "degni drizzare ogni mio desidero"
                },
                {
                    "verse": "al tuo car Figlio, ch'ogni ben conduce."
                }
            ]
        ]
    },
    {
        "url": "https://github.com/linhd-postdata/biblioteca_italiana/blob/master/xml/bibit001699",
        "author": "Jacopo Donati",
        "collection": "Poesie",
        "title": "II",
        "manually_checked": false,
        "text": [
            [
                {
                    "verse": "O Padre etterno, o sommo plasmatore,"
                },
                {
                    "verse": "o Figlio redentor tanto clemente"
                },
                {
                    "verse": "quanto nessuno a dir saria possente,"
                },
                {
                    "verse": "laudato sia l'immenso tuo valore,"
                }
            ],
            [
                {
                    "verse": "una col Santo Spirto pien d'amore,"
                },
                {
                    "verse": "da lui come da l'altro procedente!"
                },
                {
                    "verse": "Nel mondo cieco giù da tutta gente,"
                },
                {
                    "verse": "come ne' cieli, egli è a tutte l'ore."
                }
            ],
            [
                {
                    "verse": "Ché, quantunque tua santa fede sia"
                },
                {
                    "verse": "stabile sempre, lucida e verace,"
                },
                {
                    "verse": "né chi la serve mai errar porria,"
                }
            ],
            [
                {
                    "verse": "pur hai degnato al secolo rapace,"
                },
                {
                    "verse": "intra 'l gran popol che da lei devia,"
                },
                {
                    "verse": "chiarir la setta loro esser fallace."
                }
            ],
            [
                {
                    "verse": "O buon Gesù verace,"
                },
                {
                    "verse": "concedine operarsi in questa vita,"
                },
                {
                    "verse": "ché gloria etterna abbiamo alla partita!"
                }
            ]
        ]
    },
    {
        "url": "https://github.com/linhd-postdata/biblioteca_italiana/blob/master/xml/bibit001699",
        "author": "Jacopo Donati",
        "collection": "Poesie",
        "title": "III",
        "manually_checked": false,
        "text": [
            [
                {
                    "verse": "Lasso, quando talor meco ripenso"
                },
                {
                    "verse": "il fuggir de' nostri anni sì veloce"
                },
                {
                    "verse": "e quanto il Re superno, che 'n la croce"
                },
                {
                    "verse": "per noi morì, cognosco avere offenso,"
                }
            ],
            [
                {
                    "verse": "quietar non si püote alcun mio senso,"
                },
                {
                    "verse": "la lingua annoda e tremami la voce,"
                },
                {
                    "verse": "ogni mio delettar trovo mi noce,"
                },
                {
                    "verse": "parmi a dito dovere essere ostenso."
                }
            ],
            [
                {
                    "verse": "Spero sol un conforto in tale stato,"
                },
                {
                    "verse": "ché la Regina de' celesti regni"
                },
                {
                    "verse": "chi è ricorso a lei sempre ha salvato."
                }
            ],
            [
                {
                    "verse": "Onde con puro cor prego si degni"
                },
                {
                    "verse": "oprar col suo santissimo portato,"
                },
                {
                    "verse": "ché l'alma mia quiesca in essi regni."
                }
            ]
        ]
    },
    {
        "url": "https://github.com/linhd-postdata/biblioteca_italiana/blob/master/xml/bibit001699",
        "author": "Jacopo Donati",
        "collection": "Poesie",
        "title": "IV",
        "manually_checked": false,
        "text": [
            [
                {
                    "verse": "Vergine glorïosa, quand'io penso"
                },
                {
                    "verse": "l'immense grazie da te ricevute,"
                },
                {
                    "verse": "che verament' infinite son sute,"
                },
                {
                    "verse": "sento dentro dal cor dolore immenso."
                }
            ],
            [
                {
                    "verse": "Avendo in me suppeditato il senso,"
                },
                {
                    "verse": "sì la ragione, e le voglie dovute"
                },
                {
                    "verse": "non essequite, ben sì le rie adempiute,"
                },
                {
                    "verse": "onde ho 'l tuo Figlio insignemente offenso,"
                }
            ],
            [
                {
                    "verse": "non di men, Madre pia, la tua clemenzia,"
                },
                {
                    "verse": "che sempre è pronta ver del peccatore"
                },
                {
                    "verse": "disposto a ritornare a penitenzia,"
                }
            ],
            [
                {
                    "verse": "mi presta audacia a te con puro core"
                },
                {
                    "verse": "ricorrer, ché l'Etterna Sapïenzia"
                },
                {
                    "verse": "disponga a perdonar mio grave errore."
                }
            ],
            [
                {
                    "verse": "Così con puro core"
                },
                {
                    "verse": "ed umil quanto più posso supplìco"
                },
                {
                    "verse": "sì che l'alma non sia de l'oste antico."
                }
            ]
        ]
    },
    {
        "url": "https://github.com/linhd-postdata/biblioteca_italiana/blob/master/xml/bibit001699",
        "author": "Jacopo Donati",
        "collection": "Poesie",
        "title": "V",
        "manually_checked": false,
        "text": [
            [
                {
                    "verse": "O serafico padre, ottimo duce"
                },
                {
                    "verse": "di così ampla ed umile famiglia,"
                },
                {
                    "verse": "che, calcando la terra, alza le ciglia"
                },
                {
                    "verse": "al cielo, ove tua tanta gloria luce,"
                }
            ],
            [
                {
                    "verse": "la mirabil tua vita ognor riluce"
                },
                {
                    "verse": "tanto qua giù, che somma maraviglia"
                },
                {
                    "verse": "ne prende qual più in essa s'assottiglia,"
                },
                {
                    "verse": "per cognoscer la via ch'al ciel conduce."
                }
            ],
            [
                {
                    "verse": "Io sono al mondo miser peccatore,"
                },
                {
                    "verse": "illaqueato e 'nvolto in molti lacci,"
                },
                {
                    "verse": "come è chi 'n cosa bassa ha fisso 'l core."
                }
            ],
            [
                {
                    "verse": "Priego, refugio mio, me ne dislacci"
                },
                {
                    "verse": "e mi congiunga sì col Redentore"
                },
                {
                    "verse": "che l'alma mia Satan rio non impacci,"
                }
            ],
            [
                {
                    "verse": "né tra li suoi la cacci,"
                },
                {
                    "verse": "quando dal miser corpo fia partita,"
                },
                {
                    "verse": "ma che transvoli in cielo a lieta vita."
                }
            ]
        ]
    },
    {
        "url": "https://github.com/linhd-postdata/biblioteca_italiana/blob/master/xml/bibit001699",
        "author": "Jacopo Donati",
        "collection": "Poesie",
        "title": "VI",
        "manually_checked": false,
        "text": [
            [
                {
                    "verse": "Invittissimo prencipe, signore"
                },
                {
                    "verse": "magnanimo, costante e glorïoso"
                },
                {
                    "verse": "milite sopr'ogni altro e grazïoso,"
                },
                {
                    "verse": "o qual Cesare fu perdonatore,"
                }
            ],
            [
                {
                    "verse": "[oh] quanto è amirando tuo valore,"
                },
                {
                    "verse": "che di sì ria fortuna ogni maroso"
                },
                {
                    "verse": "ti sia approdato in porto di riposo,"
                },
                {
                    "verse": "possendo a chi fallì mostrar suo errore!"
                }
            ],
            [
                {
                    "verse": "Le signorie, o Duca, come sai"
                },
                {
                    "verse": "meglio ch'alcun, s'ottengon colla spada;"
                },
                {
                    "verse": "poi, acquistate, l'essalta iustizia."
                }
            ],
            [
                {
                    "verse": "S'esta virtù suprema abraccerai,"
                },
                {
                    "verse": "qual se' usato, t'aprirai la strada"
                },
                {
                    "verse": "onde avrai laude in terra e 'n ciel letizia."
                }
            ]
        ]
    }
]