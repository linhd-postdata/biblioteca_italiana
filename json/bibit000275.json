[
    {
        "author": "Alberto d'Adovardo Alberti",
        "work": "Poesie",
        "title": "I",
        "structure": "sonetto",
        "url": "http://www.bibliotecaitaliana.it/testo/bibit000275",
        "text": [
            [
                {
                    "verse": "Se Morte prevenisse al mio partire,"
                },
                {
                    "verse": "pi\u00f9 dolze mi saria che 'l viver poi"
                },
                {
                    "verse": "non riveggendo mai simile a voi,"
                },
                {
                    "verse": "madonna, ogni mia speme, ogni disire."
                }
            ],
            [
                {
                    "verse": "Soccorri adunque, o Morte, al mio languire,"
                },
                {
                    "verse": "concedimi l'andar presto fra i tuoi,"
                },
                {
                    "verse": "tra'mi di vita e delli inganni suoi,"
                },
                {
                    "verse": "poi che vivendo ho pi\u00f9 volte a morire."
                }
            ],
            [
                {
                    "verse": "Se Morte pur mi lascia miser privo"
                },
                {
                    "verse": "in questo rio partir, che far\u00f2 in vita"
                },
                {
                    "verse": "se non languire assai pi\u00f9 ch'io non soglio?"
                }
            ],
            [
                {
                    "verse": "Amore e Morte m'hanno tanto a schivo"
                },
                {
                    "verse": "che l'un non vuole e l'altro non mi aita:"
                },
                {
                    "verse": "onde, qual maraviglia s'io mi doglio?"
                }
            ]
        ]
    }
]