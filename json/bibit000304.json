        "text": [
            [
                {
                    "verse": "I' ho pensato di fare un gioiello"
                },
                {
                    "verse": "che sia allegro, gioioso ed ornato,"
                },
                {
                    "verse": "e s\u00ec 'l vorrei donare in parte e lato,"
                },
                {
                    "verse": "ch'ogn'uomo dica: \u2013 E' li sta ben, \u00e8 bello! \u2013"
                }
            ],
            [
                {
                    "verse": "E or di nuovo ho trovato un donzello"
                },
                {
                    "verse": "saggio, cortese e ben ammaestrato,"
                },
                {
                    "verse": "che gli starebbe me' l'imperiato"
                },
                {
                    "verse": "che non ist\u00e0 la gemma nell'anello:"
                }
            ],
            [
                {
                    "verse": "Carlo di misser Guerra Cavicciuoli,"
                },
                {
                    "verse": "quel ch'\u00e8 valente ed ardito e gagliardo"
                },
                {
                    "verse": "e servente, comandi chi che vuoli;"
                }
            ],
            [
                {
                    "verse": "leggero pi\u00f9 che lonza o liopardo,"
                },
                {
                    "verse": "e mai non fece dei denar figliuoli,"
                },
                {
                    "verse": "ma spende pi\u00f9 che 'l marchese lombardo."
                }
            ]
        ]
    },
    {
        "author": "Folgore da San Gimignano",
        "work": "Sonetti dei mesi",
        "title": "Altri sonetti",
        "structure": "sonetto",
        "url": "http://www.bibliotecaitaliana.it/testo/bibit000304",
        "text": [
            [
                {
                    "verse": "Pi\u00f9 lichisati siete ch'ermellini,"
                },
                {
                    "verse": "conti pisan, cavalieri e donzelli,"
                },
                {
                    "verse": "e per istudio de' vostri cappelli"
                },
                {
                    "verse": "credete vantaggiare i fiorentini;"
                }
            ],
            [
                {
                    "verse": "e franchi fate stare i ghibellini"
                },
                {
                    "verse": "in ogni parte, o cittadi o castelli,"
                },
                {
                    "verse": "veggendovi s\u00ec osi e s\u00ec isnelli:"
                },
                {
                    "verse": "sotto l'arme, parete paladini."
                }
            ],
            [
                {
                    "verse": "Valenti sempre come lepre in caccia"
                },
                {
                    "verse": "a riscontrare in mare i genovesi,"
                },
                {
                    "verse": "e co' lucchesi non avete faccia;"
                }
            ],
            [
                {
                    "verse": "e come i can dell'ossa son cortesi,"
                },
                {
                    "verse": "se Folgore abbia cosa che gli piaccia,"
                },
                {
                    "verse": "siate voi contro a tutti li foresi."
                }
            ]
        ]
    },
    {
        "author": "Folgore da San Gimignano",
        "work": "Sonetti dei mesi",
        "title": "Sonetti dubbi",
        "structure": "sonetto",
        "url": "http://www.bibliotecaitaliana.it/testo/bibit000304",
        "text": [
            [
                {
                    "verse": "Amico caro, non fiorisce ogni erba,"
                },
                {
                    "verse": "n\u00e9 ogni fior che par, frutto non porta;"
                },
                {
                    "verse": "e non \u00e8 vertudiosa, ogni verba,"
                },
                {
                    "verse": "n\u00e9 ha vert\u00f9 ogni pietra ch'\u00e8 orta;"
                }
            ],
            [
                {
                    "verse": "e tal cosa \u00e8 matura e pare acerba,"
                },
                {
                    "verse": "e tal se par doler che se conforta;"
                },
                {
                    "verse": "ogni cera che par, non \u00e8 soperba,"
                },
                {
                    "verse": "cosa \u00e8 che getta fiamma e che par morta."
                }
            ],
            [
                {
                    "verse": "Per\u00f2 non se convien ad uomo saggio"
                },
                {
                    "verse": "volere adesso far d'ogn'erba fasso,"
                },
                {
                    "verse": "n\u00e9 d'ogni pietra caricarsi 'l dosso,"
                }
            ],
            [
                {
                    "verse": "n\u00e9 voler trar d'ogni parola saggio,"
                },
                {
                    "verse": "n\u00e9 con tutta la gente andare a passo:"
                },
                {
                    "verse": "senza ragione a dir ci\u00f2 non son mosso."
                }
            ]
        ]
    }
]