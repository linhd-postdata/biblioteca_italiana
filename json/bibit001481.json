[
    {
        "author": "Giambattista Giraldi Cinzio",
        "work": "Le fiamme",
        "title": "Risposta.",
        "structure": "sonetto",
        "url": "http://www.bibliotecaitaliana.it/testo/bibit001481",
        "text": [
            [
                {
                    "verse": "Mentre voi sete intento in lodar sempre"
                },
                {
                    "verse": "le vive fiamme che v'ardono il cuore,"
                },
                {
                    "verse": "e che piangendo, ringraziate amore,"
                },
                {
                    "verse": "quantunque ei vi consumi, e vi distempre."
                }
            ],
            [
                {
                    "verse": "Mirate Signor mio, se il duol vi tempre"
                },
                {
                    "verse": "quella, che tien di voi tutto il migliore;"
                },
                {
                    "verse": "qual de le nostre sia fiamma maggiore,"
                },
                {
                    "verse": "e qual di noi viva in pi\u00f9 amare tempre."
                }
            ],
            [
                {
                    "verse": "Che forse il lungo mio grave languire,"
                },
                {
                    "verse": "non che l'aguagli altra ben empia forte,"
                },
                {
                    "verse": "direte, o infernal fero aspro martire:"
                }
            ],
            [
                {
                    "verse": "ma che via pi\u00f9, crudel spietato, e forte"
                },
                {
                    "verse": "sia che'l vostro penar, pi\u00f9 che'l morire:"
                },
                {
                    "verse": "se dir cosa si pu\u00f2 peggior che morte."
                }
            ]
        ]
    }
]